<Window x:Class="Root_AOP01_Inspection.UI._3._RUN.RNR_UI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Root_AOP01_Inspection.UI._3._RUN"
      mc:Ignorable="d" 
        Height="150" Width="400"
      d:DesignHeight="150" d:DesignWidth="400"
    Background="{StaticResource PanelBackGround}">
    <GroupBox Header="RNR">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Gray"  BorderThickness="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="10" >

                        <TextBlock Text="RNR Count       =" FontSize="20"
                                           VerticalAlignment="Center" />

                    </Grid>
                    <Grid Grid.Column="1" Margin="10" >

                        <TextBlock x:Name="RNRCount" Text="{Binding p_nRNRCount}" FontSize="20"
                                           VerticalAlignment="Center" />

                    </Grid>
                </Grid>
            </Border>
            <Border Grid.Row="1" BorderBrush="Gray"  BorderThickness="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="10" >

                        <TextBlock Text="RNR Time         =" FontSize="20"
                                           VerticalAlignment="Center" />

                    </Grid>
                    <Grid Grid.Column="1" Margin="10" >

                        <TextBlock x:Name="RNRTime" FontSize="20"
                                           VerticalAlignment="Center" />

                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </GroupBox>
</Window>
