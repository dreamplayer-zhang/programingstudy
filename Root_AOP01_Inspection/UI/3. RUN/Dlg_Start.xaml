                                BorderThickness="0,0,1,1">
                            <Grid>
                                <TextBlock Style="{StaticResource BasicTb}"
                                           Text=">"
                                           Margin="45,0" />
                                <TextBlock Style="{StaticResource BasicTb}"
                                           Text="0"
                                           HorizontalAlignment="Center" />
                                <TextBlock Style="{StaticResource BasicTb}"
                                           Text="mm"
                                           Margin="40,0"
