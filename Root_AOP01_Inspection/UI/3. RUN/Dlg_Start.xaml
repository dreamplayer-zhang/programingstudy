<Window x:Class="Root_AOP01_Inspection.Dlg_Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Root_AOP01_Inspection"
        xmlns:icon="clr-namespace:Root_AOP01_Inspection.Icon"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="800"
        Width="1200"
        Background="Gray">
    <Grid Background="{StaticResource PanelBackGround}"
          Margin="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <!--Title Bar-->
        <Grid Grid.Row="0"
              Name="TitleBar"
              Background="{DynamicResource MainThema}"
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <StackPanel Orientation="Horizontal">
                <Viewbox Margin="3"
                         VerticalAlignment="Center">
                    <icon:AtiLogo />
                </Viewbox>
                <TextBlock Text="Manual Start"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Margin="5,0,0,0"
                           Grid.Column="1" />
            </StackPanel>
            <StackPanel WindowChrome.IsHitTestVisibleInChrome="True"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Grid.Column="2">
                <Button Style="{StaticResource SystemButton}"
                        x:Name="CloseButton"
                        Width="30"
                        Height="25"
                        Margin="0,0,0,0"
                        Foreground="White"
                        Click="CloseButton_Click"
                        VerticalAlignment="Bottom">
                    <Path Style="{StaticResource CloseIconKey}" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <GroupBox Header="Loadport 1">
                    <Grid Background="AliceBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <UniformGrid Columns="2" Margin="10">
                                <TextBlock Text="Pod ID"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="pod00001"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                                <TextBlock Text="Lot ID"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="lot00001"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                                <TextBlock Text="Reticle ID"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="dummy001"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                            </UniformGrid>
                        </Grid>
                        <Viewbox Margin="5"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
                                 Width="15" Height="15">
                            <CheckBox IsChecked="True"/>
                        </Viewbox>
                        <Grid Grid.Row="1">
                            <UniformGrid Columns="4"
                                         Rows="2">
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Manual"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Auto"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Present"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Placed"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Load"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Unload"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Reserve"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Alarm"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>

                            </UniformGrid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Content="Load"
                                    Margin="3,0"
                                    Style="{StaticResource SetupPanelBtn}" />
                            <Button Content="Unload"
                                    Margin="3,0"
                                    Grid.Column="1"
                                    Style="{StaticResource SetupPanelBtn}" />
                        </Grid>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Loadport 2" Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <UniformGrid Columns="2" Margin="10">
                                <TextBlock Text="Pod ID"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="pod00001"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                                <TextBlock Text="Lot ID"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="lot00001"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                                <TextBlock Text="Reticle ID"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="dummy001"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                            </UniformGrid>
                        </Grid>
                        <Viewbox Margin="5"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
                                 Width="15"
                                 Height="15">
                            <CheckBox IsChecked="False" />
                        </Viewbox>
                        <Grid Grid.Row="1">
                            <UniformGrid Columns="4"
                                         Rows="2">
                                <Grid Margin="3"
                                      Background="LightGray">
                                    <TextBlock Text="Manual"
