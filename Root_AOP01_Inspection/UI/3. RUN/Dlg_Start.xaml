                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="2">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3"/>
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="3">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3"/>
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="4">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="5">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="6">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="7">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="8">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3"/>
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1,0,1,1"
                                Grid.Row="9">
                            <CheckBox VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="3"/>
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="1">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Edge Broken" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="2">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Pattern Array Shift" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="3">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Pateern Discolor" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="4">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Barcode Scratch" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="5">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Align Key Exist" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="6">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Pellicle Shift" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="7">
                            <TextBlock Style="{StaticResource BasicTb}"
                                       Text="Pellicle Haze" />
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,1,1"
                                Grid.Column="1"
                                Grid.Row="8">
