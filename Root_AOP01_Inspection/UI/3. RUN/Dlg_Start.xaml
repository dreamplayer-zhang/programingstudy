                                <TextBlock Style="{StaticResource BasicTb}"
                                           Text="um"
                                           Margin="40,0"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                    </Grid>
                        <GroupBox Margin="10,0,10,5" Grid.Row="1">
                            <GroupBox.Header>
                                <TextBlock Text="Option" />
                            </GroupBox.Header>
                            <UniformGrid Margin="10,5" Columns="2">
                                <CheckBox Content="Option1" />
                                <CheckBox Content="Option2" />
                                <CheckBox Content="Option3" />
                                <CheckBox Content="Option4" />
                                <CheckBox Content="Option5" />
                                <CheckBox Content="Option6" />
