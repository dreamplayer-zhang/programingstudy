        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Content="Cancel"
                    Width="300"
                    Click="CloseButton_Click"
                    Style="{StaticResource SetupPanelBtn}" />
