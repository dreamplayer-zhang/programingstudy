                                           Text=">"
                                           Margin="45,0" />
                                <TextBlock Style="{StaticResource BasicTb}"
                                           Text="0"
                                           HorizontalAlignment="Center" />
                                <TextBlock Style="{StaticResource BasicTb}"
                                           Text="um"
                                           Margin="40,0"
