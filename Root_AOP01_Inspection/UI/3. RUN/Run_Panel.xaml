                                             Maximum="{Binding p_mainVision.p_nPellicleShiftProgressMax}"
                                             Foreground="SteelBlue" />
                                <TextBlock Text="{Binding p_mainVision.p_nPellicleShiftProgressPercent, StringFormat={}{0}%}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Pellicle FrontSide"
                              Grid.Row="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <UniformGrid Margin="10,5"
