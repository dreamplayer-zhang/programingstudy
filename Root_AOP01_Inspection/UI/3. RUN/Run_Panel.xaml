<UserControl x:Class="Root_AOP01_Inspection.Run_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Root_AOP01_Inspection"
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:module="clr-namespace:Root_AOP01_Inspection.Module"
             xmlns:lp="clr-namespace:Root_AOP01_Inspection.UI_UserControl"
             mc:Ignorable="d"
             d:DesignHeight="866"
             d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <UserControl.Resources>
        <local:BooleanToPassFailStringConverter x:Key="BooleanToPassFailString"/>
        <local:BooleanToPassFailColorConverter x:Key="BooleanToPassFailColor"/>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <Grid Height="866">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="40*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0">
                        <Grid Margin="10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="1*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid  Grid.Row="0" Grid.RowSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Margin="1,5,10,0" x:Name="gridLampR" BorderBrush="Black" BorderThickness="1" Background="Red"/>
                                <Border Grid.Row="1" Margin="1,0,10,0" x:Name="gridLampY" BorderBrush="Black" BorderThickness="1" Background="Gold"/>
                                <Border Grid.Row="2" Margin="1,0,10,0" x:Name="gridLampG" BorderBrush="Black" BorderThickness="1" Background="LimeGreen"/>
                            </Grid>

                            <StackPanel Grid.Row="0" Grid.Column="1"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Total Progress"
                                           FontSize="15"
                                           FontWeight="Bold" />
                                <Grid>
                                    <ProgressBar Height="40"
                                                 Margin="0,2"
                                                 Value="55"
                                                 Foreground="SeaGreen" />
                                    <TextBlock Text="55%"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"
                                               FontSize="15" />
                                </Grid>
                            </StackPanel>
                            <UniformGrid Grid.Row="2" Grid.Column="1"
                                         Columns="2">
                                <TextBlock Text="Need"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="00:00:00"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                                <TextBlock Text="Run"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="00:00:00"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                            </UniformGrid>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Row="1">
                        <lp:Loadport_UI x:Name="loadportA"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <lp:Loadport_UI x:Name="loadportB"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0"
                              Header="Loaction">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <!--<ColumnDefinition />-->
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <!--<Grid Grid.Column="0" x:Name ="ExistLoadport"
                                  Margin="5"
                                  Background="LightGray">
                                <TextBlock Text="Loadport"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>-->
                            <Grid Grid.Column="0" x:Name ="ExistRTR"
                                  Margin="5"
                                  Background="LightGray">
                                <TextBlock Text="RTR" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="1" x:Name = "ExistVision"
                                  Margin="5"
                                  Background="LightGray">
                                <TextBlock Text="Vision" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Image View"
                              Grid.Row="1">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="80" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Column="1"
                                  Grid.Row="0"
                                  Background="Black"
                                  Margin="5">
                                <!--<Image Source="/Root_AOP01_Inspection;component/Resource/top.PNG" />-->
                                <tools:MiniViewer DataContext="{Binding p_miniViewerTop}"/>
                            </Grid>
                            <Grid Grid.Column="2"
                                  Grid.Row="1"
                                  Background="Black"
                                  Margin="5">
                                <!--<Image Source="/Root_AOP01_Inspection;component/Resource/Right.PNG" />-->
                                <tools:MiniViewer DataContext="{Binding p_miniViewerRight}"/>
                            </Grid>
                            <Grid Grid.Column="0"
                                  Grid.Row="1"
                                  Background="Black"
                                  Margin="5">
                                <!--<Image Source="/Root_AOP01_Inspection;component/Resource/Left.PNG" />-->
                                <tools:MiniViewer DataContext="{Binding p_miniViewerLeft}"/>
                            </Grid>
                            <Grid Grid.Column="1"
                                  Grid.Row="2"
                                  Background="Black"
                                  Margin="5">
                                <!--<Image Source="/Root_AOP01_Inspection;component/Resource/bottom.PNG" />-->
                                <tools:MiniViewer DataContext="{Binding p_miniViewerBottom}"/>
                            </Grid>
                            <Grid Grid.Column="1"
                                  Grid.Row="1"
                                  Background="Black"
                                  Margin="5">
                                <!--<Image Source="/Root_AOP01_Inspection;component/Resource/ReticlDefect.PNG" />-->
                                <tools:MiniViewer DataContext="{Binding p_miniViewerMain}"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="1.5*" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />

                    </Grid.RowDefinitions>
                    <GroupBox Header="Pellicle Expanding">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <UniformGrid Margin="10,5"
                                         Rows="3"
                                         Columns="2">
                                <TextBlock Text="Result"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_mainVision.p_bPellicleExpandingPass, Converter={StaticResource BooleanToPassFailString}}"
                                           Foreground="{Binding p_mainVision.p_bPellicleExpandingPass, Converter={StaticResource BooleanToPassFailColor}}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Min"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_mainVision.p_dPellicleExpandingMin}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Max"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_mainVision.p_dPellicleExpandingMax}"
                                           VerticalAlignment="Center" />
                            </UniformGrid>
                            <Grid Grid.Row="1"
                                  Margin="5,3">
                                <ProgressBar Value="{Binding p_mainVision.p_nPellicleExpandingProgressValue}"
                                             Maximum="{Binding p_mainVision.p_nPellicleExpandingProgressMax}"
                                             Minimum="{Binding p_mainVision.p_nPellicleExpandingProgressMin}"
                                             Foreground="SteelBlue" />
                                <TextBlock Text="{Binding p_mainVision.p_nPellicleExpandingProgressPercent, StringFormat={}{0}%}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Pellicle Haze"
