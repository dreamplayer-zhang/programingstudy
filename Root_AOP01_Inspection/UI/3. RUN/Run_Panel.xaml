                                <TextBlock Text="{Binding p_mainVision.p_nPatternShiftProgressPercent, StringFormat={}{0}%}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </Grid>
