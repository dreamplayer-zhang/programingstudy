                        <TextBlock Text="{Binding p_dPellicleExpandingSpec_um, StringFormat={}> \{0:n4\} um}" Grid.Row="2" Grid.Column="2"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
