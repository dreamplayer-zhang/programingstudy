                                        <local:Dummy a="31" b="8978, 3305" c="2.4mm" d="56" e="0x000000"/>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
