<UserControl x:Class="Root_WIND2.UI_Temp.Setup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_WIND2.UI_Temp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    
    <Grid Background="{StaticResource main_background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0"
                Grid.RowSpan="2" Background="{StaticResource main_background}">
            <TextBlock Text="WIND2" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="32"
                       FontStyle="Italic"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>
        <!-- Menubar -->
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="{StaticResource main_background}">
            <StackPanel Orientation="Horizontal">
                <Menu Foreground="White"
                      Background="{StaticResource main_background}">
                    <MenuItem >
                        <MenuItem.Header>
                            <Grid Width="70"
                                  Height="25">
                                <TextBlock Text="File"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="New"/>
                        <MenuItem Header="Load"/>
                        <MenuItem Header="Save"/>
                        <MenuItem Header="Save As"/>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <Grid Width="70"
                                  Height="25">
                                <TextBlock Text="View"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Log">

                        </MenuItem>
                        <MenuItem Header="Alarm">

                        </MenuItem>
                        <MenuItem Header="FDC">

                        </MenuItem>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <Grid Width="70"
                                  Height="25">
                                <TextBlock Text="Tool"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Login">

                        </MenuItem>
                        <MenuItem Header="RTR">

                        </MenuItem>
                        <MenuItem Header="Loadport">

                        </MenuItem>
                        <MenuItem Header="Setting">

                        </MenuItem>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <Grid Width="100"
                                  Height="25">
                                <TextBlock Text="Network"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Online">

                        </MenuItem>
                        <MenuItem Header="Offline">

                        </MenuItem>
                        <MenuItem Header="GEM">

                        </MenuItem>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <Grid Width="100"
                                  Height="25">
                                <TextBlock Text="Navigation"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Setup Home" />
                        <MenuItem Header="Inspction" />
                        <MenuItem Header="Recipe Wizard">
                            <MenuItem Header="Recipe Summary" />
                            <MenuItem Header="PreAlign" />
                            <MenuItem Header="FrontSide">
                                <MenuItem Header="Front Summary" />
                                <MenuItem Header="Alignment" />
                                <MenuItem Header="General" />
                            </MenuItem>
                            <MenuItem Header="BackSide" />
                            <MenuItem Header="EBR" />
                            <MenuItem Header="Edge" />
                        </MenuItem>
                        <MenuItem Header="Matienance" />
                        <MenuItem Header="GEM" />
                    </MenuItem>
                    <MenuItem Command="{Binding btnMode}">
                        <MenuItem.Header>
                            <Grid Width="100"
                                  Height="25">
                                <TextBlock Text="Mode Select"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding btnPopUpSetting}">
                        <MenuItem.Header>
                            <Grid Width="100"
                                  Height="25">
                                <TextBlock Text="Setting"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="{StaticResource main_background}">

        </Border>
        <!--Panel-->
        <Border Grid.Row="2" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="{StaticResource main_view_background}">
            <Grid>
                <ContentControl Content="{Binding p_CurrentPanel}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
        <!--End Panel-->
    </Grid>
</UserControl>
