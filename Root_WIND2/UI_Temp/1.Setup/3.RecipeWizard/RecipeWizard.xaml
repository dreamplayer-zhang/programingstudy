<Page x:Class="Root_WIND2.UI_Temp._1.Setup._3.RecipeWizard.RecipeWizard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Root_WIND2.UI_Temp._1.Setup._3.RecipeWizard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecipeWizard">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Background="MidnightBlue">
                <Button BorderThickness="0"
                        Content="O"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="22"
                        Margin="4, 4, 0, 4"
                        Background="LightSteelBlue"/>
                <Button BorderThickness="0"
                        Content="O"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="22"
                        Margin="4, 0, 4, 4"
                        Background="DarkBlue"/>
                <Button BorderThickness="0"
                        Content="O"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="22"
                        Margin="4, 0, 4, 4"
                        Background="DarkBlue"/>
                <Button BorderThickness="0"
                        Content="O"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="22"
                        Margin="4, 0, 4, 4"
                        Background="DarkBlue"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Background="LightSteelBlue"
                        >
                <StackPanel.Effect>
                    <DropShadowEffect ShadowDepth="2"  Color="Gray"/>
                </StackPanel.Effect>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 4, 4, 4"
                        Content="Summary"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="LightSkyBlue"/>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 0, 4, 4"
                        Content="Product"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"/>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 0, 4, 4"
                        Content="Origin"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"/>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 0, 4, 4"
                        Content="Alignment"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"/>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 0, 4, 4"
                        Content="Mask"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"/>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 0, 4, 4"
                        Content="Spec"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"/>
                <Button BorderThickness="0"
                        Height="22"
                        Padding="15, 0, 0, 0"
                        Margin="4, 0, 4, 4"
                        Content="Inspect"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"/>

            </StackPanel>
            
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="95*"/>
                </Grid.RowDefinitions>
                <Border
                    Margin="4, 4, 4, 0"
                    BorderThickness="1"
                    BorderBrush="Pink"
                    Background="LightPink"
                    CornerRadius="4"
                    >
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" Color="Gray"/>
                    </Border.Effect>
                </Border>
                <Border 
                    Grid.Row="1"
                    Margin="4"
                    BorderThickness="0"
                    Background="Black"
                    />
            </Grid>

            <Border Grid.Column="1"
                    Margin="0,4,4,4"
                    BorderThickness="1"
                    BorderBrush="CadetBlue"
                    CornerRadius="5"
                    Background="CadetBlue"
                    >
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="Gray"/>
                </Border.Effect>
            </Border>


        </Grid>
    </Grid>
</Page>
