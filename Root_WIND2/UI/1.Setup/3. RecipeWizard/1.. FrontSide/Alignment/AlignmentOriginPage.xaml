<UserControl x:Class="Root_WIND2.AlignmentOriginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_WIND2"
             mc:Ignorable="d" 
             d:DesignHeight="838" d:DesignWidth="1683" 
             Background="{StaticResource PanelBackGround}">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <StackPanel>
            <Grid Height="788">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      x:Name="col1">
                    <GroupBox Grid.Row="0" Header="Image View"
                              Background="{StaticResource GroupBoxBackground}">
                        <Grid Background="Black">
                            <Image Source="/Root_WIND2;component/Resources/wafer.PNG"
                                   Stretch="UniformToFill"/>
                            <Canvas>
                                <Rectangle Canvas.Left="50" Canvas.Top="317"
                                       Width="60" Height="60"
                                       StrokeThickness="1"
                                       Stroke="Red" />
                            </Canvas>
                        </Grid>
                    </GroupBox>
                </Grid>
                <GridSplitter Grid.Column="1" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" 
                              Background="{StaticResource Splitter}" 
                              Width="3"
                              ShowsPreview="True"/>
                <Grid Grid.Column="2" x:Name="col2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Origin"
                              Background="{StaticResource GroupBoxBackground}">
                        <Grid Background="Black">
                            <Viewbox>
                                <Grid>
                                    <Image Source="/Root_WIND2;component/Resources/Origin.PNG"
                                        Margin="15"/>
                                </Grid>
                            </Viewbox>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <GroupBox Header="Origin Info"
                              Background="{StaticResource GroupBoxBackground}">
                            <Grid Margin="10,0,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="X" Style="{StaticResource BasicTb}" Grid.Row="0"/>
                                <TextBlock Text="Y" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                                <TextBlock Text="Width" Style="{StaticResource BasicTb}" Grid.Row="2"/>
                                <TextBlock Text="Height" Style="{StaticResource BasicTb}" Grid.Row="3"/>
                                <TextBox Text="245164" Style="{StaticResource BasicTbox}" Grid.Row="0" Grid.Column="1"
                                     Margin="10"/>
                                <TextBox Text="826798" Style="{StaticResource BasicTbox}" Grid.Row="1" Grid.Column="1"
                                     Margin="10"/>
                                <TextBox Text="2400" Style="{StaticResource BasicTbox}" Grid.Row="2" Grid.Column="1"
                                     Margin="10"/>
                                <TextBox Text="3200" Style="{StaticResource BasicTbox}" Grid.Row="3" Grid.Column="1"
                                     Margin="10"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Pitch Info" Grid.Column="1"
                              Background="{StaticResource GroupBoxBackground}">
                            <Grid Margin="10,0,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="X" Style="{StaticResource BasicTb}" Grid.Row="0"/>
                                <TextBlock Text="Y" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                              
                                <TextBox Text="3000" Style="{StaticResource BasicTbox}" Grid.Row="0" Grid.Column="1"
                                     Margin="10"/>
                                <TextBox Text="4000" Style="{StaticResource BasicTbox}" Grid.Row="1" Grid.Column="1"
                                     Margin="10"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                    
                </Grid>
            </Grid>
            <Line Stroke="{StaticResource Splitter}"
                  Stretch="Fill"
                  Margin="-1,2,-1,2"
                  HorizontalAlignment="Stretch"
                  X2="1"/>
            <Grid Height="45">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=col1, Path=ActualWidth}"/>
                    <ColumnDefinition Width="{Binding ElementName=col2, Path=ActualWidth}"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,3,0"
                            HorizontalAlignment="Right">
                    <Button Content="Load Image"
                            Width="170"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                    <Button Content="Clear Image"
                            Width="170"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                    <Button Content="Snap"
                            Width="170"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                </StackPanel>        
                <StackPanel Grid.Column="1"
                            Margin="0,0,1,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Apply"
                            Width="170"
                            Height="35"
                            Margin="0,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                    <Button Content="Clear"
                            Width="170"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
