<UserControl x:Class="Root_WIND2.AlignmentPositionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_WIND2"
             mc:Ignorable="d" 
             d:DesignHeight="838" d:DesignWidth="1683" 
             Background="{StaticResource PanelBackGround}">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <StackPanel>
            <Grid Height="788">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      x:Name="col1">
                    <GroupBox Grid.Row="0" Header="Image View"
                              Background="{StaticResource GroupBoxBackground}">
                        <Grid Background="Black">
                            <Image Source="/Root_WIND2;component/Resources/wafer.PNG"
                                   Stretch="UniformToFill"/>
                            <Canvas>
                                <Rectangle Canvas.Left="50" Canvas.Top="317"
                                       Width="60" Height="60"
                                       StrokeThickness="1"
                                       Stroke="Red" />
                            </Canvas>
                        </Grid>
                    </GroupBox>
                </Grid>
                <GridSplitter Grid.Column="1" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" 
                              Background="{StaticResource Splitter}" 
                              Width="3"
                              ShowsPreview="True"/>
                <Grid Grid.Column="2" x:Name="col2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Origin"
                              Background="{StaticResource GroupBoxBackground}">
                        <Grid Background="Black">
                            <Viewbox>
                                <Grid>
                                    <Image Source="/Root_WIND2;component/Resources/Origin.PNG"
                                        Margin="15"/>
                                    <Canvas>
                                        <TextBlock Canvas.Left="335" Canvas.Top="30"
                                           Text="Die Position 1" Foreground="Red"/>
                                        <Rectangle Canvas.Left="325" Canvas.Top="20"
                                           Width="110" Height="195"
                                           StrokeThickness="1"
                                           Stroke="Red" />
                                        <TextBlock Canvas.Left="30" Canvas.Top="220"
                                           Text="Die Position 0" Foreground="Red"/>
                                        <Rectangle Canvas.Left="20" Canvas.Top="210"
                                           Width="110" Height="195"
                                           StrokeThickness="1"
                                           Stroke="Red" />
                                    </Canvas>
                                </Grid>
                            </Viewbox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Feature"
                              Background="{StaticResource GroupBoxBackground}">
                        <DataGrid IsReadOnly="True">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No." Binding="{Binding Path=no}" Width="35"/>
                                <DataGridTextColumn Header="X" Binding="{Binding Path=x}" Width="*"/>
                                <DataGridTextColumn Header="Y" Binding="{Binding Path=y}" Width="*"/>
                                <DataGridTextColumn Header="Width" Binding="{Binding Path=width}" Width="*"/>
                                <DataGridTextColumn Header="Height" Binding="{Binding Path=height}" Width="*"/>
                                <DataGridTemplateColumn Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button>Delete</Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <local:DummyMask no="0" x="74" y="146" width="69" height="136"/>
                            <local:DummyMask no="1" x="257" y="18" width="68" height="124"/>

                        </DataGrid>
                    </GroupBox>
                </Grid>
            </Grid>
            <Line Stroke="{StaticResource Splitter}"
                  Stretch="Fill"
                  Margin="-1,2,-1,2"
                  HorizontalAlignment="Stretch"
                  X2="1"/>
            <Grid Height="45">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=col1, Path=ActualWidth}"/>
                    <ColumnDefinition Width="{Binding ElementName=col2, Path=ActualWidth}"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1"
                            Margin="0,0,1,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Clear"
                            Width="170"
                            Height="35"
                            Margin="0,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                    <Button Content="Position Test"
                            Width="170"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource PanelBtn}"/>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
