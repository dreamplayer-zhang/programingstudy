<UserControl x:Class="Root_WIND2.FrontSideSpec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_WIND2"
             xmlns:helper="clr-namespace:Helper"
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:wpg="clr-namespace:System.Windows.Controls"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="838" d:DesignWidth="1683" Background="{StaticResource PanelBackGround}">
    <UserControl.Resources>
        <local:StringConverter x:Key="StringConverter"/>
        <local:ColorConverter x:Key="ColorConverter"/>
        <local:IndexConverter x:Key="IndexConverter"/>
        <Style TargetType="{x:Type DataGridCell}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="Black" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid DataContext="{Binding p_Spec_VM}">
        <ScrollViewer>
            <StackPanel>
                <Grid Height="838">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" DataContext="{Binding p_Mask_Viewer}">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition  Height="3*"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Mask"
                              Background="{StaticResource GroupBoxBackground}">
                            <Grid>
                                <ScrollViewer Grid.Row="0">
                                    <DataGrid ItemsSource="{Binding p_cInspMask}"
                                              SelectedItem="{Binding p_SelectedMask}"
                                              SelectionMode="Single"
                                              IsReadOnly="True"
                                              RowHeaderWidth="0"
                                              AutoGenerateColumns="False">
                                        <DataGrid.Resources>
                                            <CollectionViewSource Source="{Binding p_cInspMask}"
                                                                  x:Key="items" />
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalAlignment"
                                                        Value="Stretch" />
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Center" />
                                            </Style>
                                            <Style x:Key="TextInCellCenter"
                                                   TargetType="{x:Type TextBlock}">
                                                <Setter Property="TextAlignment"
                                                        Value="Center" />
                                                <Setter Property="VerticalAlignment"
                                                        Value="Center" />
                                            </Style>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                                             Color="Gainsboro" />
                                        </DataGrid.Resources>

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Index"
                                                                Width="100"
                                                                ElementStyle="{StaticResource TextInCellCenter}"
                                                                Binding="{Binding Converter={StaticResource IndexConverter},  
                                                                ConverterParameter={StaticResource ResourceKey=items}}" />

                                            <DataGridTemplateColumn Width="*"
                                                                    Header="Color">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid Background="{Binding p_Color, Converter={StaticResource ColorConverter}}"
                                                              Margin="2" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                                
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Viewer" Grid.Row="1">
                            <tools:RootViewer />
                        </GroupBox>
                    </Grid>
                    <!--Mask&Insepection Method-->
                    <Grid Grid.Column="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>

