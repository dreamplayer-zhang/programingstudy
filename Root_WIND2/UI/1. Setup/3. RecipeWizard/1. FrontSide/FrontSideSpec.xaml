                                                  SelectionMode="Single"
                                                  AutoGenerateColumns="False" 
                                                  IsReadOnly="True">
                                            <DataGrid.Resources>
                                                <CollectionViewSource Source="{Binding p_cInspMethod}" x:Key="methods"/>
