                          Header="Feature">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Visible">

                        <StackPanel Orientation="Horizontal">
                            <Grid Width="200"
                              Margin="10"
                              Background="Black">
                                <TextBlock Text="Image 1"
                                       Foreground="White"
                                       VerticalAlignment="Center"
