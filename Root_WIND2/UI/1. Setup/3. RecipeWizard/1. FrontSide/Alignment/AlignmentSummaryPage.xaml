                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Wafer Size" Style="{StaticResource BasicTb}" Grid.Row="0" />
                        <TextBlock Text="Shot Origin X" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                        <TextBlock Text="Shot Origin Y" Style="{StaticResource BasicTb}" Grid.Row="2"/>
                        <TextBlock Text="Shot Size X" Style="{StaticResource BasicTb}" Grid.Row="3"/>
                        <TextBlock Text="Shot Size Y" Style="{StaticResource BasicTb}" Grid.Row="4"/>
                        <TextBlock Text="Shot Matrix X" Style="{StaticResource BasicTb}" Grid.Row="5"/>
                        <TextBlock Text="Shot Matrix Y" Style="{StaticResource BasicTb}" Grid.Row="6"/>

                        <TextBlock Text="300" Style="{StaticResource BasicTb}" Grid.Row="0" Grid.Column="1"
                                   TextAlignment="Center"
                                   Margin="10"/>
                        <TextBlock Text="15" Style="{StaticResource BasicTb}" Grid.Row="1" Grid.Column="1" TextAlignment="Center"
                                   Margin="10"/>
                        <TextBlock Text="15" Style="{StaticResource BasicTb}" Grid.Row="2" Grid.Column="1" TextAlignment="Center"
                                   Margin="10"/>
                        <TextBlock Text="30" Style="{StaticResource BasicTb}" Grid.Row="3" Grid.Column="1" TextAlignment="Center"
                                   Margin="10"/>
                        <TextBlock Text="30" Style="{StaticResource BasicTb}" Grid.Row="4" Grid.Column="1" TextAlignment="Center"
                                   Margin="10"/>
                        <TextBlock Text="4" Style="{StaticResource BasicTb}" Grid.Row="5" Grid.Column="1" TextAlignment="Center"
                                   Margin="10"/>
                        <TextBlock Text="4" Style="{StaticResource BasicTb}" Grid.Row="6" Grid.Column="1" TextAlignment="Center"
                                   Margin="10"/>
                    </Grid>
                </GroupBox>
            </Grid>
            
            <!--Group 1-->
            <TextBlock Text="Alignment Group 1"
