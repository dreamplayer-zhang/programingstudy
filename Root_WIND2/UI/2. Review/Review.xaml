<UserControl x:Class="Root_WIND2.Review"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:converter="clr-namespace:ViewConverter;assembly=RootTools"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:Root_WIND2"
             mc:Ignorable="d" 
             d:DesignHeight="888" d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Menu-->
        <Border Grid.Row="0"
                Background="{StaticResource ControlBackGround}"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Menu>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                                  BorderBrush="#FF707070"
                                  Command="{Binding btnMode}"
                                  BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70" Height="25">
                                <TextBlock Text="Mode"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                                  BorderBrush="#FF707070"
                                  BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70" Height="25">
                                <TextBlock Text="Tuning"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                                  BorderBrush="#FF707070"
                                  Command="{Binding}"
                                  BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70" Height="25">
                                <TextBlock Text="Option"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Color Option"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>
        <!--End Menu-->

        <!--Toolbar-->
        <Border Grid.Row="1"
                Background="{StaticResource ControlBackGround}"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,0">
        </Border>
        <!--End Toolbar-->

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Disabled">
            <StackPanel>
                <Grid Height="838">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="8*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Visibility="Hidden" x:Name="RunPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.5*"/>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="6*"/>
                        </Grid.RowDefinitions>
                        <GroupBox Grid.Row="0" Header="Progress">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Margin="10,5" VerticalAlignment="Center">
                                    <TextBlock Text="Total Progress" FontSize="16" FontWeight="Bold"/>
                                    <Grid>
                                        <ProgressBar Height="40" Margin="0,5" Value="55"/>
                                        <TextBlock Text="55%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontWeight="Bold" FontSize="13"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Margin="10,2" VerticalAlignment="Center">
                                    <TextBlock Text="Sub Progress" FontSize="13" FontWeight="Bold"/>
                                    <Grid>
                                        <ProgressBar Height="25" Value="80"/>
                                        <TextBlock Text="Sub Process Name" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                                <UniformGrid Grid.Row="2"
                                             Columns="2"
                                             Margin="20,5">
                                    <TextBlock Text="Need" VerticalAlignment="Center"/>
                                    <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Run" VerticalAlignment="Center"/>
                                    <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </UniformGrid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Header="Product">
                            <UniformGrid Margin="20,5" Columns="2">
                                <TextBlock Text="Cst ID" VerticalAlignment="Center" />
                                <TextBlock Text="-" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Lot ID" VerticalAlignment="Center"/>
                                <TextBlock Text="-" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Wafer ID" VerticalAlignment="Center"/>
                                <TextBlock Text="DummyWafer001" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Recipe" VerticalAlignment="Center"/>
                                <TextBlock Text="test200804.rcp" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Grid.Row="2" Header="Module State">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Margin="10,5" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="LoadPort1" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                        <Border Grid.Row="1" 
                                                CornerRadius="5"
                                                Margin="0,0,4,0"
                                                BorderBrush="DimGray" 
                                                BorderThickness="1"
                                                Background="{StaticResource ControlBackGround}">
                                            <TextBlock Text="Ready"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="4,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="LoadPort2" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                        <Border Grid.Row="1" 
                                                CornerRadius="5"
                                                BorderBrush="DimGray" 
                                                BorderThickness="1"
                                                Background="{StaticResource ControlBackGround}">
                                            <TextBlock Text="Ready"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="WTR" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Aligner" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Run"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="EBR(Edge)" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="BackSide" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="FrontSide" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>

                            </Grid>
                        </GroupBox>

                    </Grid>
                    <Grid Grid.Column="0" Visibility="Visible" x:Name="ReviewPanel">
                        <GroupBox 
                            Grid.Row="1" 
                            Header="Wafer List"
                            >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0">
                                    <GroupBox.Header>
                                        <TextBlock Text="Search Option"/>
                                    </GroupBox.Header>
                                    <Grid Grid.Row="1">
                                        <StackPanel Margin="10,0,10,0">
                                            <StackPanel>
                                                <CheckBox Content="Start Date" VerticalAlignment="Center" Margin="0,5,0,0"
                                                  FontSize="12" x:Name="cbStart"/>
                                                <local:DateTimePicker IsEnabled="{Binding ElementName=cbStart, Path=IsChecked}" DateFormat="yyyy-MM-dd" Background="#FFFBFBFB" />
                                                <CheckBox Content="End Date" VerticalAlignment="Center" Margin="0,5,0,0"
                                                  FontSize="12" x:Name="cbEnd"/>
                                                <local:DateTimePicker IsEnabled="{Binding ElementName=cbEnd, Path=IsChecked}" DateFormat="yyyy-MM-dd"/>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="1.5*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="Wafer ID" VerticalAlignment="Center" x:Name="cbWafer"/>
                                                    <TextBox Grid.Column="1" IsEnabled="{Binding ElementName=cbWafer, Path=IsChecked}"/>
                                                </Grid>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="1.5*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="Recipe Name" VerticalAlignment="Center" x:Name="cbRecipe"/>
                                                    <TextBox Grid.Column="1" IsEnabled="{Binding ElementName=cbRecipe, Path=IsChecked}"/>
                                                </Grid>
                                                <Button 
                                                    Content="Search" 
                                                    Margin="0,12,0,0"
                                                    Height="30"
                                                    Command="{Binding btnSearch}"
                                                    Style="{StaticResource PanelBtn}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>

                                <!--<tools:Database_DataView 
                                    DataContext="{Binding p_DataViewer_Lotinfo}" 
                                    Margin="0,5,0,0" 
                                    Grid.Row="1"
                                    >
                                </tools:Database_DataView>-->
                                <DataGrid 
                                    Name="Lotinfo_Viewer" 
                                    ItemsSource="{Binding pLotinfo_Datatable}"
                                    SelectedItem ="{Binding pSelected_Lotinfo, Mode=TwoWay}"
                                    SelectionMode="Extended"
                                    IsReadOnly="True"
                                    EnableColumnVirtualization = "True"
                                    EnableRowVirtualization = "True"
                                    ScrollViewer.CanContentScroll="True"
                                    AutoGenerateColumns="True"
                                    Grid.Row="1" Margin="2"
                                    >
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGrid.Resources>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>


                            <!--End Defect View-->
                            <Grid Grid.Column="0">
                                <ItemsControl ItemsSource="{Binding p_Element}"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <GroupBox Header="Detail">
                                    <TabControl Background="{StaticResource PanelBackGround}"
                        BorderThickness="1">
                                        <TabItem Header="Inspection">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5,2">
                                                    <CheckBox Content="Front" FontSize="15" FontWeight="Bold" Margin="0,0,15,0"/>
                                                    <CheckBox Content="Back" FontSize="15" FontWeight="Bold"  Margin="0,0,15,0"/>
                                                    <CheckBox Content="Edge" FontSize="15" FontWeight="Bold"  Margin="0,0,15,0"/>
                                                    <CheckBox Content="EBR" FontSize="15" FontWeight="Bold"   Margin="0,0,15,0"/>
                                                </StackPanel>
                                                <Button Content="Tuning" Grid.Column="1"
                                    Margin="3" FontWeight="Bold"/>
                                                <GroupBox Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="2">
                                                    <GroupBox.Header>
                                                        <TextBlock Text="Result"/>
                                                    </GroupBox.Header>


                                                    <DataGrid 
                                                        Name="Defect_Viewer" 
                                                        ItemsSource="{Binding pDefect_Datatable}"
                                                        SelectedItem ="{Binding pSelected_Defect, Mode=TwoWay}"
                                                        SelectionMode="Single"
                                                        EnableColumnVirtualization = "True"
                                                        EnableRowVirtualization = "True"
                                                        VirtualizingPanel.VirtualizationMode="Recycling"
                                                        ScrollViewer.CanContentScroll="True"

                                                        IsReadOnly="True"
                                                        AutoGenerateColumns="True"
                                              
                                                        Grid.Row="1">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="DataGridColumnHeader">
                                                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                            </Style>
                                                        </DataGrid.Resources>
                                                    </DataGrid>
                                                </GroupBox>
                                                <GroupBox  Grid.ColumnSpan="2" Grid.Row="1">
                                                    <GroupBox.Header>
                                                        <TextBlock Text="Defect Image"/>
                                                    </GroupBox.Header>


                                                    <Grid Background="Black">
                                                        <Image 
                                                            x:Name="DefectImage"
                                                            Source="{Binding p_DefectImage}">
                                                        </Image>
                                                        <!--<TextBlock Text="Defect Image"
                                                         Foreground="White"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"/>-->
                                                    </Grid>


                                                </GroupBox>

                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Defect">
                                            <Grid Grid.Column="1" Margin="15,15,15,15">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1*"/>
                                                    <RowDefinition Height="1*"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row = "0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*"/>
                                                        <RowDefinition Height="0.1*"/>
                                                    </Grid.RowDefinitions>
                                                    <GroupBox Grid.Column="0" Grid.Row="0">
                                                        <GroupBox.Header>
                                                            <TextBlock Text="Defect Intensity Distribution"/>
                                                        </GroupBox.Header>
                                                        <Grid Grid.Row = "0" Background="White">
                                                            <lvc:CartesianChart Series="{Binding DefectGVHistogram}" LegendLocation="Top" DisableAnimations="true">
                                                                <lvc:CartesianChart.AxisX>
                                                                    <lvc:Axis Title="{Binding GVXTitle}" Labels="{Binding GVXLabel}"
                                                                               MinValue="{Binding GVFrom}" MaxValue="{Binding GVTo}" 
                                                                               Separator="{x:Static lvc:DefaultAxes.CleanSeparator}">
                                                                    </lvc:Axis>
                                                                </lvc:CartesianChart.AxisX>
                                                                <lvc:CartesianChart.AxisY>
                                                                    <lvc:Axis Title="{Binding GVYTitle}" MinValue= "0" LabelFormatter="{Binding GVYLabel}"
                                                                              MaxValue="{Binding GVYMaxVal}"></lvc:Axis>
                                                                </lvc:CartesianChart.AxisY>
                                                            </lvc:CartesianChart>
                                                        </Grid>
                                                    </GroupBox>
                                                    <Grid Grid.Row = "1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="0.2*"/>
                                                            <ColumnDefinition Width="0.2*"/>
                                                            <ColumnDefinition Width="0.2*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column = "0">
                                                            <Slider Maximum="28" TickPlacement="BottomRight" Value="{Binding Slider_GV, Mode=TwoWay}"
                                                                TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,10,0,0" >
                                                            </Slider>
                                                        </Grid>
                                                        <Grid Grid.Column = "1">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="All" GroupName="GVHistogramMode"
                                                                    IsChecked="{Binding Check_GVHistogramAll}" >All</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                        <Grid Grid.Column = "2">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="Dark" GroupName="GVHistogramMode"
                                                                    IsChecked="{Binding Check_GVHistogramDark}">Dark</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                        <Grid Grid.Column = "3">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="Bright" GroupName="GVHistogramMode"
                                                                    IsChecked="{Binding Check_GVHistogramBright}" >Bright</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>
                                                <Grid Grid.Row = "1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*"/>
                                                        <RowDefinition Height="0.1*"/>
                                                    </Grid.RowDefinitions>
                                                    <GroupBox Grid.Column="0" Grid.Row="0">
                                                        <GroupBox.Header>
                                                            <TextBlock Text="Defect Size Distribution"/>
                                                        </GroupBox.Header>
                                                        <Grid Grid.Row = "0" Background="White">
                                                            <lvc:CartesianChart Series="{Binding DefectSizeHistogram}" LegendLocation="Top" DisableAnimations="true">
                                                                <lvc:CartesianChart.AxisX>
                                                                    <lvc:Axis Title="{Binding SizeXTitle}" Labels="{Binding SizeXLabel}"
                                                                              MinValue="{Binding SizeFrom}" MaxValue="{Binding SizeTo}" 
                                                                              Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"></lvc:Axis>
                                                                </lvc:CartesianChart.AxisX>
                                                                <lvc:CartesianChart.AxisY>
                                                                    <lvc:Axis Title="{Binding SizeYTitle}" MinValue= "0" LabelFormatter="{Binding SizeYLabel}"
                                                                              MaxValue="{Binding SizeYMaxVal}"></lvc:Axis>
                                                                </lvc:CartesianChart.AxisY>
                                                            </lvc:CartesianChart>
                                                        </Grid>
                                                    </GroupBox>
                                                    <Grid Grid.Row = "1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="0.25*"/>
                                                            <ColumnDefinition Width="0.25*"/>
                                                            <ColumnDefinition Width="0.25*"/>
                                                            <ColumnDefinition Width="0.25*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column = "0">
                                                            <Slider Maximum="100" TickPlacement="BottomRight" Value="{Binding Slider_Size}" 
                                                                TickFrequency="2" IsSnapToTickEnabled="True" Margin="0,10,0,0" >
                                                            </Slider>
                                                        </Grid>
                                                        <Grid Grid.Column = "1">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="Normal" GroupName="SizeHistogramMode"
                                                                    IsChecked="{Binding Check_SizeHistogramAll}" >All</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                        <Grid Grid.Column = "2">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="Small" GroupName="SizeHistogramMode"
                                                                    IsChecked="{Binding Check_SizeHistogramSmall}">Small</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                        <Grid Grid.Column = "3">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="Medium" GroupName="SizeHistogramMode"
                                                                    IsChecked="{Binding Check_SizeHistogramMedium}" >Medium</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                        <Grid Grid.Column = "4">
                                                            <Viewbox Height="20" >
                                                                <RadioButton Name="Large" GroupName="SizeHistogramMode"
                                                                    IsChecked="{Binding Check_SizeHistogramLarge}" >Large</RadioButton>
                                                            </Viewbox>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Golden Image Trend" IsEnabled="true">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="3*"/>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0" Margin="10" Background="Black">
                                                    <Image Source="{Binding GoldenImg}"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button Grid.Row="1" Width="100" Margin="0,0,5,5" 
                                                                Content="Image Load" HorizontalAlignment="Right" 
                                                                Command="{Binding LoadImage}"></Button>
                                                        <Button Grid.Row="1" Width="100" Margin="0,0,5,5" 
                                                                Content="Check All" HorizontalAlignment="Right"
                                                                Command="{Binding btnCheckAll}"></Button>
                                                        <Button Grid.Row="1" Width="100" Margin="0,0,5,5" 
                                                                Content="Uncheck All" HorizontalAlignment="Right"
                                                                Command="{Binding btnUncheckAll}"></Button>
                                                        <Button Grid.Row="1" Width="100" Margin="0,0,5,5" 
                                                                Content="Show Trend" HorizontalAlignment="Right"
                                                                Command="{Binding btnShowTrend}"></Button>
                                                        <Button Grid.Row="1" Width="100" Margin="0,0,5,5" 
                                                                Content="Save Image" HorizontalAlignment="Right"
                                                                Command="{Binding btnSearch}"></Button>
                                                    </StackPanel>
                                                </Grid>


                                                <ListBox ItemsSource="{Binding CollectionOfFilePaths}" Grid.Row="2">
                                                    <ListBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ListBox.ItemsPanel>

                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Image Source="{Binding}"/>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Metrology">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Button Content="Tuning" Grid.Column="1"
                                                    Margin="3" FontWeight="Bold"/>
                                                <GroupBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
                                                    <GroupBox.Header>
                                                        <TextBlock Text="Result"/>
                                                    </GroupBox.Header>
                                                    <DataGrid IsReadOnly="True" Grid.Row="1">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="DataGridColumnHeader">
                                                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                            </Style>
                                                        </DataGrid.Resources>
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="No." Binding="{Binding Path=no}" Width="0.5*"/>
