                                          Background="Black">
                                        <Image Source="{Binding GoldenImage}" />
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <Button Width="100"
                                                    Margin="0,0,5,5"
                                                    Content="Image Load"
                                                    HorizontalAlignment="Right"
                                                    Command="{Binding btnLoadImage}"></Button>
                                            <Button Width="100"
                                                    Margin="0,0,5,5"
                                                    Content="Show Trend"
                                                    HorizontalAlignment="Right"
                                                    Command="{Binding btnShowTrend}"></Button>
                                            <Button Width="100"
                                                    Margin="0,0,5,5"
                                                    Content="Save Image"
                                                    HorizontalAlignment="Right"
                                                    Command="{Binding btnSaveTrend}"></Button>
                                        </StackPanel>
                                    </Grid>

                                    <ListView x:Name="GoldenImagelist"
                                              Margin="10"
                                              Grid.Row="2"
                                              ItemsSource="{Binding GoldenImageList, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                              SelectedIndex="{Binding ListViewIdx}"
                                              ScrollViewer.HorizontalScrollBarVisibility="Visible">
                                        <ListView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListView.ItemsPanel>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical"
                                                            VerticalAlignment="Stretch">
                                                    <Image Source="{Binding GoldenImgData, UpdateSourceTrigger=PropertyChanged}"
                                                           Width="100"
                                                           Height="100"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Top" />
                                                    <TextBlock Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Bottom" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:CallMethodAction TargetObject="{Binding Path=DataContext, ElementName=GoldenImagelist, Mode=OneWay}"
                                                                    MethodName="GoldenImagelist_SelectionChanged" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ListView>

                                </Grid>
                            </TabItem>
