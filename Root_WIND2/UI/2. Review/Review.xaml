<UserControl x:Class="Root_WIND2.Review"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_WIND2"
             mc:Ignorable="d" 
             d:DesignHeight="888" d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <UserControl.DataContext>
        <local:Review_ViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Menu-->
        <Border Grid.Row="0"
                Background="{StaticResource ControlBackGround}"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Menu>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                                  BorderBrush="#FF707070"
                                  Command="{Binding btnMode}"
                                  BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70" Height="25">
                                <TextBlock Text="Mode"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                                  BorderBrush="#FF707070"
                                  BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70" Height="25">
                                <TextBlock Text="Tuning"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                                  BorderBrush="#FF707070"
                                  Command="{Binding}"
                                  BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70" Height="25">
                                <TextBlock Text="Option"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Color Option"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>
        <!--End Menu-->
        
        <!--Toolbar-->
        <Border Grid.Row="1"
                Background="{StaticResource ControlBackGround}"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,0">
        </Border>
        <!--End Toolbar-->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Visible">
            <StackPanel>
                <Grid Height="838">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="8*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" Visibility="Hidden" x:Name="RunPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.5*"/>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="6*"/>
                        </Grid.RowDefinitions>
                        <GroupBox Grid.Row="0" Header="Progress">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Margin="10,5" VerticalAlignment="Center">
                                    <TextBlock Text="Total Progress" FontSize="16" FontWeight="Bold"/>
                                    <Grid>
                                        <ProgressBar Height="40" Margin="0,5" Value="55"/>
                                        <TextBlock Text="55%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontWeight="Bold" FontSize="13"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Margin="10,2" VerticalAlignment="Center">
                                    <TextBlock Text="Sub Progress" FontSize="13" FontWeight="Bold"/>
                                        <Grid>
                                        <ProgressBar Height="25" Value="80"/>
                                        <TextBlock Text="Sub Process Name" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                                <UniformGrid Grid.Row="2"
                                             Columns="2"
                                             Margin="20,5">
                                    <TextBlock Text="Need" VerticalAlignment="Center"/>
                                    <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Run" VerticalAlignment="Center"/>
                                    <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </UniformGrid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Header="Product">
                            <UniformGrid Margin="20,5" Columns="2">
                                <TextBlock Text="Cst ID" VerticalAlignment="Center" />
                                <TextBlock Text="-" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Lot ID" VerticalAlignment="Center"/>
                                <TextBlock Text="-" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Wafer ID" VerticalAlignment="Center"/>
                                <TextBlock Text="DummyWafer001" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Recipe" VerticalAlignment="Center"/>
                                <TextBlock Text="test200804.rcp" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Grid.Row="2" Header="Module State">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Margin="10,5" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="LoadPort1" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                        <Border Grid.Row="1" 
                                                CornerRadius="5"
                                                Margin="0,0,4,0"
                                                BorderBrush="DimGray" 
                                                BorderThickness="1"
                                                Background="{StaticResource ControlBackGround}">
                                            <TextBlock Text="Ready"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="4,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="LoadPort2" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                        <Border Grid.Row="1" 
                                                CornerRadius="5"
                                                BorderBrush="DimGray" 
                                                BorderThickness="1"
                                                Background="{StaticResource ControlBackGround}">
                                            <TextBlock Text="Ready"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="WTR" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Aligner" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Run"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="EBR(Edge)" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="BackSide" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10,5" Grid.Row="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="FrontSide" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                    <Border Grid.Row="1" 
                                            CornerRadius="5"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource ControlBackGround}">
                                        <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>

                            </Grid>
                        </GroupBox>

                    </Grid>
                    <Grid Grid.Column="0" Visibility="Visible" x:Name="ReviewPanel">
                        <GroupBox Grid.Row="1" Header="Wafer List">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0">
                                    <GroupBox.Header>
                                        <TextBlock Text="Search Option"/>
                                    </GroupBox.Header>
                                    <Grid Grid.Row="1">
                                        <StackPanel Margin="10,0,10,0">
                                            <StackPanel>
                                                <CheckBox Content="Start Date" VerticalAlignment="Center" Margin="0,5,0,0"
                                                  FontSize="12" x:Name="cbStart"/>
                                                <local:DateTimePicker IsEnabled="{Binding ElementName=cbStart, Path=IsChecked}" DateFormat="yyyy-MM-dd" Background="#FFFBFBFB" />
                                                <CheckBox Content="End Date" VerticalAlignment="Center" Margin="0,5,0,0"
                                                  FontSize="12" x:Name="cbEnd"/>
                                                <local:DateTimePicker IsEnabled="{Binding ElementName=cbEnd, Path=IsChecked}" DateFormat="yyyy-MM-dd"/>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="1.5*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="Wafer ID" VerticalAlignment="Center" x:Name="cbWafer"/>
                                                    <TextBox Grid.Column="1" IsEnabled="{Binding ElementName=cbWafer, Path=IsChecked}"/>
                                                </Grid>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="1.5*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="Recipe Name" VerticalAlignment="Center" x:Name="cbRecipe"/>
                                                    <TextBox Grid.Column="1" IsEnabled="{Binding ElementName=cbRecipe, Path=IsChecked}"/>
                                                </Grid>
                                                <Button Content="Search" Margin="0,12,0,0"
                                                Height="30"
                                                Style="{StaticResource SetupPanelBtn}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>
                                <DataGrid Grid.Row="1" Margin="2">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="No." Binding="{Binding no}" Width="30"/>
                                        <DataGridTextColumn Header="Wafer ID" Binding="{Binding id}" Width="*"/>
                                        <DataGridTextColumn Header="Recipe" Binding="{Binding rcp}" Width="*"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding date}" Width="*"/>
                                    </DataGrid.Columns>
                                    <local:DummyWafer no="0" id="Wafer0" rcp="Test1.rcp" date="2020-08-01"/>
                                    <local:DummyWafer no="1" id="Wafer1" rcp="Test1.rcp" date="2020-08-01"/>
                                    <local:DummyWafer no="2" id="Wafer2" rcp="Test1.rcp" date="2020-08-01"/>
                                    <local:DummyWafer no="3" id="Wafer3" rcp="Test1.rcp" date="2020-08-01"/>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid Grid.Column="1">
                        <local:View/>
                    </Grid>

                </Grid>
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</UserControl>
