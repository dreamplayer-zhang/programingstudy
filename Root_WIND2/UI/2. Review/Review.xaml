<UserControl x:Class="Root_WIND2.Review"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:converter="clr-namespace:ViewConverter;assembly=RootTools"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:Root_WIND2"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="888" d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Menu-->
        <Border Grid.Row="0"
                Background="{StaticResource ControlBackGround}"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Menu>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                              BorderBrush="#FF707070"
                              Command="{Binding btnMode}"
                              BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70"
                                  Height="25">
                                <TextBlock Text="Mode"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                              BorderBrush="#FF707070"
                              BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70"
                                  Height="25">
                                <TextBlock Text="Tuning"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Background="{StaticResource ControlBackGround}"
                              BorderBrush="#FF707070"
                              Command="{Binding}"
                              BorderThickness="0,0,0,0">
                        <MenuItem.Header>
                            <Grid Width="70"
                                  Height="25">
                                <TextBlock Text="Option"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Header="Color Option" />
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>
        <!--End Menu-->

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Disabled">
            <StackPanel>
                <Grid Height="863">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*" />
                        <ColumnDefinition Width="55*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <GroupBox Grid.Row="1"
                                  Header="Result">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0">
                                    <GroupBox.Header>
                                        <TextBlock Text="Search Option" />
                                    </GroupBox.Header>
                                    <Grid Grid.Row="1">
                                        <StackPanel Margin="10,0,10,0">
                                            <StackPanel>
                                                <CheckBox Content="Start Date"
                                                          VerticalAlignment="Center"
                                                          Margin="0,5,0,0"
                                                          FontSize="12"
                                                          x:Name="cbStart" />
                                                <local:DateTimePicker IsEnabled="{Binding ElementName=cbStart, Path=IsChecked}"
                                                                      DateFormat="yyyy-MM-dd"
                                                                      Background="#FFFBFBFB" />
                                                <CheckBox Content="End Date"
                                                          VerticalAlignment="Center"
                                                          Margin="0,5,0,0"
                                                          FontSize="12"
                                                          x:Name="cbEnd" />
                                                <local:DateTimePicker IsEnabled="{Binding ElementName=cbEnd, Path=IsChecked}"
                                                                      DateFormat="yyyy-MM-dd" />
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="1.5*" />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="Wafer ID"
                                                              VerticalAlignment="Center"
                                                              x:Name="cbWafer" />
                                                    <TextBox Grid.Column="1"
                                                             IsEnabled="{Binding ElementName=cbWafer, Path=IsChecked}" />
                                                </Grid>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="1.5*" />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="Recipe Name"
                                                              VerticalAlignment="Center"
                                                              x:Name="cbRecipe" />
                                                    <TextBox Grid.Column="1"
                                                             IsEnabled="{Binding ElementName=cbRecipe, Path=IsChecked}" />
                                                </Grid>
                                                <Button Content="Search"
                                                        Margin="0,12,0,0"
                                                        Height="30"
                                                        Command="{Binding btnSearch}"
                                                        Style="{StaticResource PanelBtn}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>

                                <!--<tools:Database_DataView 
                                    DataContext="{Binding p_DataViewer_Lotinfo}" 
                                    Margin="0,5,0,0" 
                                    Grid.Row="1"
                                    >
                                </tools:Database_DataView>-->
                                <DataGrid Name="Lotinfo_Viewer"
                                          ItemsSource="{Binding pLotinfo_Datatable}"
                                          SelectedItem="{Binding pSelected_Lotinfo, Mode=TwoWay}"
                                          SelectionMode="Extended"
                                          IsReadOnly="True"
                                          EnableColumnVirtualization="True"
                                          EnableRowVirtualization="True"
                                          ScrollViewer.CanContentScroll="True"
                                          AutoGenerateColumns="True"
                                          Grid.Row="1"
                                          Margin="2">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalAlignment"
                                                    Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment"
                                                    Value="Center" />
                                        </Style>
                                    </DataGrid.Resources>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="35*" />
                            </Grid.ColumnDefinitions>
                            <ItemsControl ItemsSource="{Binding p_Element}" Grid.Column="0"/>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="1.5*" />
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0"
                                          Header="Defect Image">
                                    <Grid Background="Black">
                                        <Image Source="{Binding p_DefectImage}">
                                        </Image>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Grid.Row="1"
                                          Header="Defect List">
                                    <DataGrid Name="Defect_Viewer"
                                              ItemsSource="{Binding pDefect_Datatable}"
                                              SelectedItem="{Binding pSelected_Defect, Mode=TwoWay}"
                                              SelectionMode="Single"
                                              EnableColumnVirtualization="True"
                                              EnableRowVirtualization="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling"
                                              ScrollViewer.CanContentScroll="True"
                                              IsReadOnly="True"
                                              AutoGenerateColumns="True"
                                              Grid.Row="1">
                                        <DataGrid.Resources>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalAlignment"
                                                        Value="Stretch" />
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Center" />
                                            </Style>
                                        </DataGrid.Resources>
                                    </DataGrid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <GroupBox Grid.Column="0"
                                      Header="Defect Intensity Distribution">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="9*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0"
                                          HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"
                                              Margin="0,0,10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                            <RadioButton Name="All"
                                                         GroupName="GVHistogramMode"
                                                         IsChecked="{Binding Check_GVHistogramAll}">All</RadioButton>
                                        </Grid>
                                        <Grid Grid.Column="1"
                                              Margin="10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                            <RadioButton Name="Dark"
                                                         GroupName="GVHistogramMode"
                                                         IsChecked="{Binding Check_GVHistogramDark}">Dark</RadioButton>

                                        </Grid>
                                        <Grid Grid.Column="2"
                                              Margin="10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                            <RadioButton Name="Bright"
                                                         GroupName="GVHistogramMode"
                                                         IsChecked="{Binding Check_GVHistogramBright}">Bright</RadioButton>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1"
                                          Background="White">
                                        <lvc:CartesianChart Series="{Binding DefectGVHistogram}"
                                                            LegendLocation="Top"
                                                            DisableAnimations="true">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="{Binding GVXTitle}"
                                                          Labels="{Binding GVXLabel}"
                                                          MinValue="{Binding GVFrom}"
                                                          MaxValue="{Binding GVTo}"
                                                          Separator="{x:Static lvc:DefaultAxes.CleanSeparator}">
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="{Binding GVYTitle}"
                                                          MinValue="0"
                                                          LabelFormatter="{Binding GVYLabel}"
                                                          MaxValue="{Binding GVYMaxVal}"></lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </Grid>
                                    <Grid Grid.Row="2"
                                          Margin="5,0">
                                        <Slider Maximum="28"
                                                VerticalAlignment="Center"
                                                TickPlacement="BottomRight"
                                                Value="{Binding Slider_GV, Mode=TwoWay}"
                                                TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                Margin="0,10,0,0">
                                        </Slider>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Column="1"
                                      Header="Defect Size Distribution">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="9*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"
                                              Margin="5,0,10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">

                                            <RadioButton Name="Normal"
                                                         GroupName="SizeHistogramMode"
                                                         IsChecked="{Binding Check_SizeHistogramAll}">All</RadioButton>
                                        </Grid>
                                        <Grid Grid.Column="1"
                                              Margin="10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                            <RadioButton Name="Small"
                                                         GroupName="SizeHistogramMode"
                                                         IsChecked="{Binding Check_SizeHistogramSmall}">Small</RadioButton>
                                        </Grid>
                                        <Grid Grid.Column="2"
                                              Margin="10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                            <RadioButton Name="Medium"
                                                         GroupName="SizeHistogramMode"
                                                         IsChecked="{Binding Check_SizeHistogramMedium}">Medium</RadioButton>
                                        </Grid>
                                        <Grid Grid.Column="3"
                                              Margin="10,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                            <RadioButton Name="Large"
                                                         GroupName="SizeHistogramMode"
                                                         IsChecked="{Binding Check_SizeHistogramLarge}">Large</RadioButton>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1"
                                          Background="White">
                                        <lvc:CartesianChart Series="{Binding DefectSizeHistogram}"
                                                            LegendLocation="Top"
                                                            DisableAnimations="true">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="{Binding SizeXTitle}"
                                                          Labels="{Binding SizeXLabel}"
                                                          MinValue="{Binding SizeFrom}"
                                                          MaxValue="{Binding SizeTo}"
                                                          Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"></lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="{Binding SizeYTitle}"
                                                          MinValue="0"
                                                          LabelFormatter="{Binding SizeYLabel}"
                                                          MaxValue="{Binding SizeYMaxVal}"></lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </Grid>
                                    <Grid Grid.Row="2"
                                          Margin="5,0">
                                        <Slider Maximum="100"
                                                TickPlacement="BottomRight"
                                                Value="{Binding Slider_Size}"
                                                TickFrequency="2"
                                                IsSnapToTickEnabled="True"
                                                Margin="0,10,0,0">
                                        </Slider>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </Grid>
                    <GroupBox Header="Application" Grid.Column="2">
                        <TabControl Background="{StaticResource PanelBackGround}"
