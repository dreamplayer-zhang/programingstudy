                                        <Grid Margin="5"
                                              Background="Black">
                                            <Image Source="/Root_WIND2;component/Resources/bevelmap2.bmp"
                                                   Margin="15" />
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Row="1"
                                              Header="Bevel Panorama">
                                        <Grid Margin="5,10">
                                            <Image Source="/Root_WIND2;component/Resources/bevelmap.bmp"
