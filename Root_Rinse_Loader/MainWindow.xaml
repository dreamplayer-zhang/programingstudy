<Window x:Class="Root_Rinse_Loader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Root_Rinse_Loader"
        xmlns:mainUI="clr-namespace:Root_Rinse_Loader.MainUI"
        xmlns:engineer="clr-namespace:Root_Rinse_Loader.Engineer"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" x:Name="comboMain" SelectionChanged="comboMain_SelectionChanged"/>
        <TabControl Grid.Row="1" x:Name="tabMain">
            <TabItem Header="MainUI" Height="0">
                <mainUI:Main_UI x:Name="mainUI"/>
            </TabItem>
            <TabItem Header="Engineer" Height="0">
                <engineer:RinseL_Engineer_UI x:Name="engineerUI"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
