<UserControl x:Class="Root_Siltron.NavigationPanelUI.RecipeWizardUI.GeneralUI.GeneralPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:general="clr-namespace:Root_Siltron.NavigationPanelUI.RecipeWizardUI.GeneralUI"
             mc:Ignorable="d" 
             d:DesignHeight="818" d:DesignWidth="1912">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#FFCFCFCF"
                        BorderBrush="DimGray" BorderThickness="0,0,1,0">
            <Grid>
                <StackPanel>
                    <ToggleButton Content="General Summary"
                                  IsChecked="True"
                            Command="{Binding btnGeneralSummary}"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>
                    <Button Content="Align Recipe"
                            Command="{Binding btnGeneralAlginRecipe}"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>
                    <Button Content="Mask"
                            Command="{Binding btnGeneralMask}"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>
                    <!--여기서 BF+DF 머이런거-->
                    <Button Content="General Setup"
                            Command="{Binding btnGeneralSetup}"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>
                </StackPanel>
                <Button Content="Back"
                        Command="{Binding btnGeneralBack}"
                        VerticalAlignment="Bottom"
                    FontSize="15"
                    FontWeight="Bold"
                    Margin="10"
                    Height="40"/>
            </Grid>
        </Border>
        <Grid Grid.Column="1" x:Name="SubPanel" Background="White">

        </Grid>


    </Grid>
</UserControl>
