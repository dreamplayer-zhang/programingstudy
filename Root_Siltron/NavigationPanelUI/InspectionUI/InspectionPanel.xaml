<UserControl x:Class="Root_Siltron.NavigationPanelUI.InspectionUI.InspectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            d:DesignHeight="838" d:DesignWidth="1912">
    <UserControl>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="88*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#FFCFCFCF"
                        BorderBrush="DimGray" BorderThickness="0,0,1,0">
                <Grid>
                    <StackPanel>
                        <Button Content="Start"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>
                        <Button Content="Load/Unload"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>
                        <Button Content="Snap"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="10"
                            Height="40"/>

                    </StackPanel>
                    <Button Content="Back"
                        Command="{Binding btnInspBack}"
                        FontSize="15"
                        VerticalAlignment="Bottom"
                        FontWeight="Bold"
                        Margin="10"
                        Height="40"/>
                </Grid>
            </Border>
            <Grid Grid.Column="1" Background="White">
                <ScrollViewer>
                    <StackPanel>
                        <Grid Height="838">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Column="0" Grid.Row="0"
                              BorderBrush="Black"
                              BorderThickness="1"
                              Header="Status">
                                </GroupBox>
                                <GroupBox Grid.Column="0" Grid.Row="1"
                              BorderBrush="Black"
                              BorderThickness="1"
                              Header="Result">
                                    <DataGrid>
                                        <DataGrid.Resources>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="No." Width="40"/>
                                            <DataGridTextColumn Header="Chip Index" Width="*"/>
                                            <DataGridTextColumn Header="Location(X,Y)" Width="*"/>
                                            <DataGridTextColumn Header="GV" Width="*"/>
                                            <DataGridTextColumn Header="Defect Size" Width="*"/>
                                            <DataGridTextColumn Header="Defect Code" Width="*"/>
                                        </DataGrid.Columns>
                                        <DataGrid.Items>

                                        </DataGrid.Items>
                                    </DataGrid>
                                </GroupBox>
                                <Grid Grid.Column="0" Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <GroupBox Grid.Column="0"
                                  BorderBrush="Black"
                                  BorderThickness="1"
                                  Header="LoadPort 1">
                                        <Grid>
                                            <DataGrid>
                                                <DataGrid.Resources>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGrid.Resources>
                                                <DataGrid.Columns>
                                                    <DataGridCheckBoxColumn Header="" Width="30"/>
                                                    <DataGridTextColumn Header="No." Width="40"/>
                                                    <DataGridTextColumn Header="Wafer ID" Width="*"/>
                                                    <DataGridTextColumn Header="Recipe" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Column="1"
                                  BorderBrush="Black"
                                  BorderThickness="1"
                                  Header="LoadPort 2">
                                        <DataGrid>
                                            <DataGrid.Resources>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                </Style>
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridCheckBoxColumn Header="" Width="30"/>
                                                <DataGridTextColumn Header="No." Width="40"/>
                                                <DataGridTextColumn Header="Wafer ID" Width="*"/>
                                                <DataGridTextColumn Header="Recipe" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </GroupBox>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2.5*"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0"
                                          Grid.RowSpan="1"
                                          BorderBrush="Black"
                                          BorderThickness="1"
                                          Header="Image View">
                                    <Grid Background="Black">
                                        <Image Source="/Root_Siltron;component/Resources/aa.bmp"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Grid.Row="1"
                                          BorderBrush="Black"
                                          BorderThickness="1"
                                          Header="Defect Image">
                                    
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0"
                                          BorderBrush="Black"
                                          BorderThickness="1"
                                          Header="Map">
                                    <Grid>
                                        <Image Source="/Root_Siltron;component/Resources/reticlemap.PNG"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Grid.Row="1"
                                          BorderBrush="Black"
                                          BorderThickness="1"
                                          Header="Motion">
                                </GroupBox>
                            </Grid>

                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>


        </Grid>
    </UserControl>
</UserControl>
