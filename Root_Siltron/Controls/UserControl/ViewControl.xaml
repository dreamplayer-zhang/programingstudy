<UserControl x:Class="Root_Siltron.ViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_Siltron"
             mc:Ignorable="d" 
             d:DesignHeight="838" d:DesignWidth="1516" Background="{StaticResource PanelBackGround}">
    <UserControl.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Panel"
                                BorderBrush="#FFACACAC"
                                Width="100"
                                Height="18"
                                VerticalAlignment="Bottom">
                            <TextBlock Name="Text"
                                       FontFamily="Arial"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"/>
                            </TextBlock>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Panel" Property="Background" Value="White" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="{StaticResource ControlBackGround}"/>
                                <Setter TargetName="Panel" Property="Height" Value="22"/>
                                <Setter TargetName="Text" Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Defect View-->
        <Grid Grid.Column="0">
            <local:DefectView/>
        </Grid>
        <!--End Defect View-->

        <Grid Grid.Column="1">
            <GroupBox Header="Detail">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5,2">
                        <CheckBox Content="Front" FontSize="15" FontWeight="Bold" Margin="0,0,15,0"/>
                        <CheckBox Content="Back" FontSize="15" FontWeight="Bold"  Margin="0,0,15,0"/>
                        <CheckBox Content="Edge" FontSize="15" FontWeight="Bold"  Margin="0,0,15,0"/>
                    </StackPanel>
                    <GroupBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="3">
                        <GroupBox.Header>
                            <TextBlock Text="Result"/>
                        </GroupBox.Header>
                        <DataGrid IsReadOnly="True" Grid.Row="1">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No." Binding="{Binding Path=no}" Width="0.5*"/>
                                <DataGridTextColumn Header="Insp" Binding="{Binding Path=mode}" Width="0.7*"/>
                                <DataGridTextColumn Header="Chip" Binding="{Binding Path=chip}" Width="0.8*"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding Path=xy}" Width="1.5*"/>
                                <DataGridTextColumn Header="Gv" Binding="{Binding Path=gv}" Width="0.5*"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding Path=size}" Width="*"/>
                                <DataGridTextColumn Header="Code" Binding="{Binding Path=dc}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox  Grid.Column="1" Grid.Row="1">
                        <GroupBox.Header>
                            <TextBlock Text="Top Image"/>
                        </GroupBox.Header>
                        <Grid Background="Black">
                            <TextBlock Text="Top Image"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="2">
                        <GroupBox.Header>
                            <TextBlock Text="Bottom Image"/>
                        </GroupBox.Header>
                        <Grid Background="Black">
                            <TextBlock Text="Bottom Image"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="3">
                        <GroupBox.Header>
                            <TextBlock Text="Edge Image"/>
                        </GroupBox.Header>
                        <Grid Background="Black">
                            <TextBlock Text="Edge Image"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
