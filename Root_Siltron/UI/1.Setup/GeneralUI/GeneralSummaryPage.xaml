            <!--Inspection Area-->
            <TextBlock Text="Inspection Area"
                       HorizontalAlignment="Right"
                       Style="{StaticResource BasicTb}"
                       FontSize="25"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>
            <Rectangle Height="2" Margin="0,0,0,10" Fill="Gray"/>
            <Grid Height="450">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Mask-->
                <GroupBox Grid.Column="0"                   
                          Grid.ColumnSpan="3"                        
                          Background="{StaticResource GroupBoxBackground}"
                          Header="Mask">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="15" Background="Black">

                            <Image Source="/Root_Siltron;component/Resources/Origin.PNG"/>
                            <Canvas>
                                <Rectangle Canvas.Left="80" Canvas.Top="5"
                                           Width="330" Height="265"
                                           Stroke="Blue" Fill="SkyBlue"
                                           Opacity="0.4"
                                           StrokeThickness="1"/>
                                <Rectangle Canvas.Left="420" Canvas.Top="5"
                                           Width="70" Height="335"
                                           Opacity="0.3"
                                           Stroke="Red" Fill="Crimson"/>
                                <Rectangle Canvas.Left="80" Canvas.Top="290"
                                           Width="400" Height="90"
                                           Opacity="0.3"
                                           Stroke="Green" Fill="SeaGreen"/>

                            </Canvas>
                        </Grid>
                        <Grid Grid.Column="1" Margin="30">
                            <DataGrid>
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="No." Width="35" Binding="{Binding Path=no}"/>
                                    <DataGridTextColumn Header="Color" Width="*" Binding="{Binding Path=color}"/>
                                    <DataGridTextColumn Header="Insepction Item" Width="2*" Binding="{Binding Path=item}"/>
                                </DataGrid.Columns>
                                <local:DummyGeneral no="0" color="Blue" item="NN_Surface001"/>
                                <local:DummyGeneral no="1" color="Red" item="NN_Surface001"/>
                                <local:DummyGeneral no="2" color="Greed" item="NN_Surface001"/>
                            </DataGrid>
                        </Grid>


                    </Grid>
                </GroupBox>
            </Grid>

            <!--Inspection Mode-->
            <TextBlock Text="Inspection Mode"
                       HorizontalAlignment="Right"
                       Style="{StaticResource BasicTb}"
                       FontSize="25"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>
            <Rectangle Height="2" Margin="0,0,0,10" Fill="Gray"/>
            <Grid Height="250">
                <StackPanel Orientation="Horizontal">
                    <GroupBox Width="500"     
                              Background="{StaticResource GroupBoxBackground}"
                              Header="Inspection 1">
                        <Grid Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Mode" Style="{StaticResource BasicTb}" Grid.Row="0"/>
                            <TextBlock Text="Absolute GV" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                            <TextBlock Text="Absolute Size" Style="{StaticResource BasicTb}" Grid.Row="2"/>
                            <TextBlock Text="Die to Die" Style="{StaticResource BasicTb}" Grid.Row="3"/>
                            <TextBlock Text="Intensity" Style="{StaticResource BasicTb}" Grid.Row="4"/>
                            <TextBlock Text="Surface" Style="{StaticResource BasicTb}" Grid.Row="0" Grid.Column="1"/>
                            <TextBlock Text="80" Style="{StaticResource BasicTb}" Grid.Row="1" Grid.Column="1"/>
                            <TextBlock Text="15 (um)" Style="{StaticResource BasicTb}" Grid.Row="2" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="3" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="4" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Width="500"
                              Background="{StaticResource GroupBoxBackground}"
                              Header="Inspection 2">
                        <Grid Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Mode" Style="{StaticResource BasicTb}" Grid.Row="0"/>
                            <TextBlock Text="Absolute GV" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                            <TextBlock Text="Absolute Size" Style="{StaticResource BasicTb}" Grid.Row="2"/>
                            <TextBlock Text="Die to Die" Style="{StaticResource BasicTb}" Grid.Row="3"/>
                            <TextBlock Text="Intensity" Style="{StaticResource BasicTb}" Grid.Row="4"/>
                            <TextBlock Text="" Style="{StaticResource BasicTb}" Grid.Row="0" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="1" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="2" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="3" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="4" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Width="500"       
                              Background="{StaticResource GroupBoxBackground}"
                              Header="Inspection 3">
                        <Grid Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Mode" Style="{StaticResource BasicTb}" Grid.Row="0"/>
                            <TextBlock Text="Absolute GV" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                            <TextBlock Text="Absolute Size" Style="{StaticResource BasicTb}" Grid.Row="2"/>
                            <TextBlock Text="Die to Die" Style="{StaticResource BasicTb}" Grid.Row="3"/>
                            <TextBlock Text="Intensity" Style="{StaticResource BasicTb}" Grid.Row="4"/>
                            <TextBlock Text="SR" Style="{StaticResource BasicTb}" Grid.Row="0" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="1" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="2" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="3" Grid.Column="1"/>
                            <TextBlock Text="-" Style="{StaticResource BasicTb}" Grid.Row="4" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </Grid>

