<UserControl x:Class="Root.Root_Engineer_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root"
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:memory="clr-namespace:RootTools.Memory;assembly=RootTools"
             xmlns:toolBox="clr-namespace:RootTools.ToolBoxs;assembly=RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:Root_Handler_UI Grid.Column="0" x:Name="handlerUI" Margin="2"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="AliceBlue" ShowsPreview="True" Width="3"/>
        <TabControl Grid.Column="2">
            <TabItem Header="ToolBox">
                <toolBox:ToolBox_UI x:Name="toolBoxUI" Margin="2"/>
            </TabItem>
            <TabItem Header="MemoryViewer">
                <memory:MemoryViewer_UI x:Name="memoryViewer" Margin="2"/>
            </TabItem>
            <TabItem Header="Log">
                <tools:LogView_UI x:Name="logViewUI" Margin="2"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
