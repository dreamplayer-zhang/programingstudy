<UserControl x:Class="Root.Root_Handler_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root"
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:module="clr-namespace:RootTools.Module;assembly=RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl x:Name="tabControl">
        <TabItem Header="Login">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <tools:Login_UI Grid.Column="0" x:Name="loginUI" />
            </Grid>
        </TabItem>
        <TabItem Header="ModuleList">
            <module:ModuleList_UI x:Name="moduleListUI"/>
        </TabItem>
    </TabControl>
</UserControl>
