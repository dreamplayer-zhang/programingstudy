<Window x:Class="Root.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Root"
        xmlns:tree="clr-namespace:RootTools.Trees;assembly=RootTools"
        mc:Ignorable="d"
        Title="Root" Height="700" Width="1200" Loaded="Window_Loaded" Closing="Window_Closing" WindowState="Maximized">
    <Grid>
        <TabControl>
            <TabItem Header="Engineer">
                <local:Root_Engineer_UI x:Name="engineerUI"/>
            </TabItem>
            <TabItem Header="Tree">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button x:Name="buttonOpen" Content="Open" Click="ButtonOpen_Click" Margin="5" Width="50"/>
                        <Button x:Name="buttonSave" Content="Save" Click="ButtonSave_Click" Margin="5" Width="50"/>
                    </StackPanel>
                    <tree:TreeUI Grid.Row="1" x:Name="treeRootUI" Margin="5" />
                </Grid>
            </TabItem>
            <TabItem Header="TreeView">
                <local:TreeViewTest/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
