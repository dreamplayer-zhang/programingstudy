<Window x:Class="RootTools_Vision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tools="clr-namespace:RootTools;assembly=RootTools" 
		xmlns:local="clr-namespace:RootTools_Vision"
        Title="MainWindow" Height="600" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Content="Button" HorizontalAlignment="Stretch" Height="100"  Click="Button_Click"/>
            <Button Content="TEST" HorizontalAlignment="Stretch" Height="100" Click="Button_Click_1"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <Button Content="Server" HorizontalAlignment="Stretch"  VerticalAlignment="Top" Height="100" Click="Button_Server"/>
            <Button Content="Client" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100" Click="Button_Client"/>
        </StackPanel>
        <Grid Grid.Row="1" Grid.ColumnSpan="2" DataContext="{Binding ImageViewerVM}">
            <local:CloneImageViewer x:Name="viewer"/>
        </Grid>
    </Grid>
</Window>
