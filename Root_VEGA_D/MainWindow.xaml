                                            <RowDefinition Height="100" />
                                            <RowDefinition Height="400" />
                                            <RowDefinition Height="100" />
                                            <RowDefinition Height="100" />

                                        </Grid.RowDefinitions>
                                        <GroupBox Header="Product Info"
                                                  Grid.Column="0"
                                                  Grid.Row="1" DataContext="">
                                            <UniformGrid Margin="5,2">

