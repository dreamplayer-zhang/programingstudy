                                            <Button Content="→"
                                                    Grid.Column="3"
                                                    Grid.Row="3"
                                                    Margin="5" />

                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="Reference">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.5*" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
