                <!--Tab Area-->
                <Grid Grid.Column="2"
                      Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0"
                                       x:Name="LogSplitter" />
                        <RowDefinition Height="00"
                                       x:Name="LogArea" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Grid.ColumnSpan="2"
