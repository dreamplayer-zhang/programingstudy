                                    <RowDefinition Height="2.5*" />
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="2" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.RowSpan="2"
                                      Background="White">
                                    <Border BorderBrush="#FFACACAC"
                                            BorderThickness="1">
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="8*" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="{Binding ElementName=red, Path=Value, StringFormat=N0}"
                                                       Grid.Column="0" />
                                            <TextBlock Text="{Binding ElementName=green, Path=Value, StringFormat=N0}"
                                                       Grid.Column="1" />
                                            <TextBlock Text="{Binding ElementName=blue, Path=Value, StringFormat=N0}"
                                                       Grid.Column="2" />
                                            <Slider Orientation="Vertical"
                                                    HorizontalAlignment="Center"
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Minimum="0"
                                                    Maximum="255"
                                                    x:Name="red"
                                                    SmallChange="1" />
                                            <Slider Orientation="Vertical"
                                                    HorizontalAlignment="Center"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Minimum="0"
                                                    Maximum="255"
                                                    x:Name="green"
                                                    SmallChange="1" />
                                            <Slider Orientation="Vertical"
                                                    HorizontalAlignment="Center"
                                                    Grid.Row="1"
                                                    Grid.Column="2"
                                                    Minimum="0"
                                                    Maximum="255"
                                                    x:Name="blue"
                                                    SmallChange="1" />
                                            <TextBlock Text="R"
                                                       Grid.Column="0"
                                                       Grid.Row="2" />
                                            <TextBlock Text="G"
                                                       Grid.Column="1"
                                                       Grid.Row="2" />
                                            <TextBlock Text="B"
                                                       Grid.Column="2"
                                                       Grid.Row="2" />
                                        </Grid>
                                    </Border>

                                </Grid>
                                <Border Grid.Column="2"
                                        Grid.Row="0"
                                        BorderBrush="#FFACACAC"
                                        BorderThickness="1"
                                        Margin="0,0,0,2"
                                        Background="White">
                                    <Grid Margin="5,0,0,0">
                                        <Grid.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize"
                                                        Value="10" />
                                                <Setter Property="VerticalAlignment"
                                                        Value="Center" />
                                                <Setter Property="HorizontalAlignment"
                                                        Value="Left" />
                                            </Style>
                                        </Grid.Resources>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="X"
                                                   Grid.Column="0" />
                                        <TextBlock Text="0"
                                                   Grid.Column="1" />
                                        <TextBlock Text="Y"
                                                   Grid.Column="2" />
                                        <TextBlock Text="0"
                                                   Grid.Column="3" />
                                        <TextBlock Text="Z"
                                                   Grid.Column="4" />
                                        <TextBlock Text="0"
                                                   Grid.Column="5" />
                                        <TextBlock Text="Th"
                                                   Grid.Column="6" />
                                        <TextBlock Text="0"
                                                   Grid.Column="7" />
                                    </Grid>
                                </Border>

                                <TabControl Grid.Column="2"
                                            Grid.Row="1"
                                            Background="White">
                                    <TabItem Header="Jog">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.5*" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="0"
                                                    Margin="5" />
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="0"
                                                       Text="X" />
                                            <Button Content="→"
                                                    Grid.Column="2"
                                                    Grid.Row="0"
                                                    Margin="5" />
                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="1"
                                                    Margin="5" />
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       Text="Y" />
                                            <Button Content="→"
                                                    Grid.Column="2"
                                                    Grid.Row="1"
                                                    Margin="5" />
                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="2"
                                                    Margin="5" />
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="2"
                                                       Text="Z" />
                                            <Button Content="→"
                                                    Grid.Column="2"
                                                    Grid.Row="2"
                                                    Margin="5" />
                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="3"
                                                    Margin="5" />
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="3"
                                                       Text="Theta" />
                                            <Button Content="→"
                                                    Grid.Column="2"
                                                    Grid.Row="3"
                                                    Margin="5" />

                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="Absolute">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.5*" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="0"
                                                       Text="X" />
                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="0"
                                                    Margin="5" />
                                            <TextBox Grid.Column="2"
                                                     Grid.Row="0"
                                                     Margin="0,5,0,5"
                                                     Text="0"
                                                     TextAlignment="Center"
                                                     VerticalContentAlignment="Center" />
                                            <Button Content="→"
                                                    Grid.Column="3"
                                                    Grid.Row="0"
                                                    Margin="5" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       Text="Y" />
                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="1"
                                                    Margin="5" />
                                            <TextBox Grid.Column="2"
                                                     Grid.Row="1"
                                                     Margin="0,5,0,5"
                                                     Text="0"
                                                     TextAlignment="Center"
                                                     VerticalContentAlignment="Center" />
                                            <Button Content="→"
                                                    Grid.Column="3"
                                                    Grid.Row="1"
                                                    Margin="5" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="2"
                                                       Text="Z" />
                                            <Button Content="←"
                                                    Grid.Column="1"
                                                    Grid.Row="2"
                                                    Margin="5" />
                                            <TextBox Grid.Column="2"
                                                     Grid.Row="2"
                                                     Margin="0,5,0,5"
                                                     Text="0"
                                                     TextAlignment="Center"
                                                     VerticalContentAlignment="Center" />
                                            <Button Content="→"
                                                    Grid.Column="3"
                                                    Grid.Row="2"
                                                    Margin="5" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="3"
                                                       Text="Theta" />
                                            <Button Content="←"
