<UserControl x:Class="Root_Rinse_Unloader.MainUI.Rinse_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_Rinse_Unloader.MainUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" x:Name="comboBoxMode" Margin="4" SelectedItem="{Binding p_eMode}"/>
        <TextBox Grid.Row="1" x:Name="textBoxWidth" Margin="4" TextAlignment="Center" Text="{Binding p_widthStrip}" PreviewKeyDown="textBoxWidth_PreviewKeyDown"/>
        <TextBlock Grid.Row="2" x:Name="textBlockState" Margin="4" Text="{Binding p_eState}"/>
    </Grid>
</UserControl>
