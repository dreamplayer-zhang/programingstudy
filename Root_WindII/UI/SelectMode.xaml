<UserControl x:Class="Root_WindII.SelectMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_WindII"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="1600" d:DesignWidth="800"
             Background="{StaticResource main_view_background}">
    <UserControl.Resources>
        <Style x:Key="selectmode_button" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="FontFamily"  Value="Arial"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="5" 
                                Background="#050533">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect x:Name="sd" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#333388"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#111133"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="selectmode_engineer_button" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily"  Value="Arial"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="5"
                                Background="{StaticResource main_background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#333388"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource main_background}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource selectmode_button}" 
                Command="{Binding btnSetupCommand}">
            <Button.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock 
                        Text="SETUP"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,60"
                        />
                    <icon:PackIconMaterial 
                        Grid.Row="1" 
                        Kind="MonitorEdit" 
                        Width="260" 
                        Height="260"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>
            </Button.Content>
        </Button>

        <Button Grid.Column="1" 
                Grid.RowSpan="2"
                Margin="4,4,4,30"
                Style="{StaticResource selectmode_button}"
                Command="{Binding btnReviewCommand}" >
            <Button.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock 
                        Text="REVIEW"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,60"
                        />
                    <icon:PackIconMaterial 
                        Grid.Row="1" 
                        Kind="MonitorDashboard" 
                        Width="260" 
                        Height="260"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button Grid.Column="2" 
                Grid.RowSpan="2"
                Margin="4,4,4,30"
                Style="{StaticResource selectmode_button}"
                Command="{Binding btnOperationCommand}" >
            <Button.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock 
                        Text="OPERATION"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,60"
                        />
                    <icon:PackIconMaterial 
                        Grid.Row="1" 
                        Kind="Account" 
                        Width="260" 
                        Height="260"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button Grid.Row="1" 
                Grid.Column="0" 
                Margin="4,4,4,30"
                Style="{StaticResource selectmode_engineer_button}"
                Command="{Binding btnEngineerCommand}">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <icon:PackIconMaterial 
                        Grid.Column="0" 
                        Kind="Cog" 
                        Width="40" 
                        Height="40"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                    <TextBlock 
                        Grid.Column="1"
                        Text="ENGINEER"
                        Margin="20, 0, 0, 0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        />

                </Grid>
            </Button.Content>

        </Button>
    </Grid>
</UserControl>


    