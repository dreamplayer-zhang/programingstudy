<UserControl x:Class="Root_AOP01_Packing.Run_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AOP01_Packing"
             mc:Ignorable="d" 
             d:DesignHeight="866" d:DesignWidth="1912" Background="{StaticResource PanelBackGround}">
    <ScrollViewer>
        <StackPanel>
            <Grid Height="866">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="65*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Progress">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <!--<RowDefinition Height="1*"/>-->
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Margin="10,2" VerticalAlignment="Center">
                                <TextBlock Text="Total Progress" FontSize="15" FontWeight="Bold"/>
                                <Grid>
                                    <ProgressBar Height="40" Margin="0,0" Value="55"/>
                                    <TextBlock Text="55%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontWeight="Bold" FontSize="13"/>
                                </Grid>
                            </StackPanel>
                            <!--<StackPanel Grid.Row="1" Margin="10,2" VerticalAlignment="Center">
                                <TextBlock Text="Sub Progress" FontSize="13" FontWeight="Bold"/>
                                <Grid>
                                    <ProgressBar Height="25" Value="80"/>
                                    <TextBlock Text="Sub Process Name" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>-->
                            <UniformGrid Grid.Row="2"
                                         Columns="2"
                                         Margin="20,0">
                                <TextBlock Text="Need" VerticalAlignment="Center"/>
                                <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Run" VerticalAlignment="Center"/>
                                <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </UniformGrid>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Product">
                        <UniformGrid Margin="20,0" Columns="2">
                            <TextBlock Text="Pod ID" VerticalAlignment="Center" />
                            <TextBlock Text="pod00001" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Lot ID" VerticalAlignment="Center"/>
                            <TextBlock Text="lot00001" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Reticle ID" VerticalAlignment="Center"/>
                            <TextBlock Text="dummyW001" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Recipe" VerticalAlignment="Center"/>
                            <TextBlock Text="test00001.rcp" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </UniformGrid>
                    </GroupBox>
                    <GroupBox Grid.Row="2" Header="Module State">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Margin="10,3" Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="LOADPORT : RETICLE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                                CornerRadius="2"
                                                Margin="0,0,0,0"
                                                BorderBrush="DimGray" 
                                                BorderThickness="1"
                                                Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>

                            </Grid>
                            <Grid Margin="10,3" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="LOADPORT : POD" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="LOADPORT : CASE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="UNLOADPORT" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="RTR : RETICLE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="RTR : POD / CASE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="TAPING MODULE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="7">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="SEALING MODULE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Margin="10,3" Grid.Row="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="PICKER MODULE" VerticalAlignment="Bottom" FontSize="13" FontWeight="Bold"/>
                                <Border Grid.Row="1" 
                                            CornerRadius="2"
                                            BorderBrush="DimGray" 
                                            BorderThickness="1"
                                            Background="{StaticResource PanelBackGround}">
                                    <TextBlock Text="Ready"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>

                        </Grid>
                    </GroupBox>
                </Grid>
                <GroupBox Header="Overview" Grid.Column="1">
                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="PICKER MODULE" Grid.Column="0">

                            </GroupBox>
                            <GroupBox Header="SEALING MODULE" Grid.Column="1">

                            </GroupBox>
                            <GroupBox Header="TAPING MODULE" Grid.Column="2">

                            </GroupBox>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="RTR : POD / CASE" Grid.Column="0">

                            </GroupBox>
                            <GroupBox Header="RTR : RETICLE" Grid.Column="1">

                            </GroupBox>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="LOADPORT : CASE" Grid.Column="0">

                            </GroupBox>
                            <GroupBox Header="UNLOADPORT" Grid.Column="1">

                            </GroupBox>
                            <GroupBox Header="LOADPORT : POD" Grid.Column="2">

                            </GroupBox>
                            <GroupBox Header="LOADPORT : RETICLE" Grid.Column="3">

                            </GroupBox>
                        </Grid>
                    </Grid>
                </GroupBox>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="85*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Parameter">
                        <Grid Margin="20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Taping Num" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Style="{StaticResource BasicTbox}" Margin="20,10"
                                 Text="0"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Vaccume Time" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Style="{StaticResource BasicTbox}" Margin="20,10"
                                 Text="0"/>
                                <TextBlock Text="sec" VerticalAlignment="Center" Grid.Column="2"/>

                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Heating Time" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Style="{StaticResource BasicTbox}" Margin="20,10"
                                 Text="0"/>
                                <TextBlock Text="sec" VerticalAlignment="Center" Grid.Column="2"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <StackPanel Grid.Row="1">
                        <Button Content="Start / Stop" Style="{StaticResource SetupPanelBtn}"/>
                        <Button Content="Initialize" Style="{StaticResource SetupPanelBtn}"/>
                        <Button Content="Recovery" Style="{StaticResource SetupPanelBtn}"/>
                        <Button Content="Module Run" Style="{StaticResource SetupPanelBtn}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
