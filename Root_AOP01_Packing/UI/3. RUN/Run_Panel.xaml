<UserControl x:Class="Root_AOP01_Packing.Run_Panel" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AOP01_Packing" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1912" 
             Background="{StaticResource PanelBackGround}">
    <ScrollViewer>
        <StackPanel>
            <Grid Height="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="8*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Grid.ColumnSpan="2" Header="Progress" 
                              Name="prog"
                              DataContext="{Binding p_ModuleList}">
                        <Grid Margin="10,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                <TextBlock Text="Total Progress" FontSize="15" FontWeight="Bold" />
                                <Grid>
                                    <ProgressBar Height="40" Margin="0,2" Value="{Binding p_iRun}" Maximum="{Binding p_maxRun}" Foreground="SeaGreen" />
                                    <TextBlock Text="{Binding p_Percent}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="15" />
                                </Grid>
                            </StackPanel>
                            <UniformGrid Grid.Row="2" Columns="2">
                                <TextBlock Text="Need" VerticalAlignment="Center" />
                                <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <TextBlock Text="Run" VerticalAlignment="Center" />
                                <TextBlock Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            </UniformGrid>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="5*" />
                        </Grid.RowDefinitions>
                        <GroupBox Grid.Row="0" Header="Parameter">
                            <Grid Margin="10,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Taping Num" VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Style="{StaticResource BasicTbox}" Margin="15,7" Text="0" />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Vacuum Time" VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Style="{StaticResource BasicTbox}" Margin="15,7" Text="0" />
                                    <TextBlock Text="sec" VerticalAlignment="Center" Grid.Column="2" />

                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Heating Time" VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Style="{StaticResource BasicTbox}" Margin="15,7" Text="0" />
                                    <TextBlock Text="sec" VerticalAlignment="Center" Grid.Column="2" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Header="Product">
                            <UniformGrid Margin="10,5" Columns="2">
                                <TextBlock Text="Pod ID" VerticalAlignment="Center" />
                                <TextBlock Text="pod00001" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <TextBlock Text="Lot ID" VerticalAlignment="Center" />
                                <TextBlock Text="lot00001" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <TextBlock Text="Reticle ID" VerticalAlignment="Center" />
                                <TextBlock Text="dummy001" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <TextBlock Text="Recipe" VerticalAlignment="Center" />
                                <TextBlock Text="test00001.rcp" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Grid.Row="2" Header="Module State">
                            <UniformGrid Margin="10,5" Rows="6" Columns="2">
                                <TextBlock Text="ELEVATOR" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_Elevator.p_eState}" VerticalAlignment="Center" />
                                <TextBlock Text="UNLOADPORT" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_UnloadPort.p_eState}" VerticalAlignment="Center" />
                                <TextBlock Text="RTR A" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_RTRA.p_eState}" VerticalAlignment="Center" />
                                <TextBlock Text="RTR B" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_RTRB.p_eState}" VerticalAlignment="Center" />
                                <TextBlock Text="TAPING MODULE" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_TapePacker.p_eState}" VerticalAlignment="Center" />
                                <TextBlock Text="WRAPING MODULE" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding p_VacuumPacker.p_eState}" VerticalAlignment="Center" />
                            </UniformGrid>
                        </GroupBox>

                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <GroupBox Grid.Row="0" Header="Loadport A">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="55*" />
                                    <RowDefinition Height="45*" />
                                </Grid.RowDefinitions>
                                <UniformGrid Columns="2" Margin="0,1">
                                    <TextBlock Text="Pod ID" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sCarrierID}" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="Lot ID" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sLotID}" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="Reticle ID" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sRecipeID}" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="State" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sState}" VerticalAlignment="Center" Margin="10,0" />
                                </UniformGrid>
                                <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" Margin="5">
                                    <UniformGrid Columns="4" Rows="2">
                                        <Border>
                                            <TextBlock Text="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border Background="SeaGreen">
                                            <TextBlock Text="Manual" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Placed" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Present" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Load" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Unload" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Reserve" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border Background="Crimson">
                                            <TextBlock Text="Alarm" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </UniformGrid>
                                </Border>

                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Header="Loadport B">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="55*" />
                                    <RowDefinition Height="45*" />
                                </Grid.RowDefinitions>
                                <UniformGrid Columns="2" Margin="0,1">
                                    <TextBlock Text="Pod ID" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sCarrierID}" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="Lot ID" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sLotID}" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="Reticle ID" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sRecipeID}" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="State" VerticalAlignment="Center" Margin="10,0" />
                                    <TextBlock Text="{Binding p_sState}" VerticalAlignment="Center" Margin="10,0" />
                                </UniformGrid>
                                <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" Margin="5">
                                    <UniformGrid Columns="4" Rows="2">
                                        <Border>
                                            <TextBlock Text="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border Background="SeaGreen">
                                            <TextBlock Text="Manual" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Placed" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Present" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Load" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Unload" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border>
                                            <TextBlock Text="Reserve" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                        <Border Background="Crimson">
                                            <TextBlock Text="Alarm" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </UniformGrid>
                                </Border>

                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Visibility="Collapsed" Opacity="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.1*" />
                        <RowDefinition Height="0.9*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>
                        <GroupBox Header="PACKING MODULE" Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/PACKING_STAGE.png" Margin="5" Opacity="0.3" />
                                <local:LoadingControl />
                                <Grid Grid.Row="1">
                                    <TextBlock Text="Packing..." Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="20,2">
                                    <ProgressBar Value="30" Foreground="SteelBlue" />
                                    <TextBlock Text="30%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="PACKING LOADER" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/PACKING_LOADER.png" Margin="0" />
                                <Grid Grid.Row="1">
                                    <TextBlock Text="Ready" Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="20,2">
                                    <ProgressBar Value="0" Foreground="SteelBlue" />
                                    <TextBlock Text="0%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="TAPING MODULE" Grid.Column="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/TAPING_MODULE.png" />
                                <Grid Grid.Row="1" Margin="50,0">
                                    <TextBlock Text="Ready" Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="70,2">
                                    <ProgressBar Value="0" Foreground="SteelBlue" />
                                    <TextBlock Text="0%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <GroupBox Header="RTR : POD / CASE" Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/RTR.png" Opacity="0.3" />
                                <local:LoadingControl />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="30" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="1">
                                        <TextBlock Text="Get Pod" Style="{StaticResource BasicTb}" Margin="10,0" />
                                    </Grid>
                                    <Grid Grid.Row="2" Margin="10,2">
                                        <ProgressBar Value="70" Foreground="SteelBlue" />
                                        <TextBlock Text="70%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="RTR : RETICLE" Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/PTR.png" Margin="15" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="30" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="1">
                                        <TextBlock Text="Ready" Style="{StaticResource BasicTb}" Margin="10,0" />
                                    </Grid>
                                    <Grid Grid.Row="2" Margin="10,2">
                                        <ProgressBar Value="0" Foreground="SteelBlue" />
                                        <TextBlock Text="0%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <GroupBox Header="LOADPORT : CASE" Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/INDIVISUAL_CASE_LOADERpng.png" />
                                <Grid Grid.Row="1">
                                    <TextBlock Text="Ready" Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="20,2">
                                    <ProgressBar Value="0" Foreground="SteelBlue" />
                                    <TextBlock Text="0%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="UNLOADPORT" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/UNLOADPORT.png" />
                                <Grid Grid.Row="1">
                                    <TextBlock Text="Ready" Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="20,2">
                                    <ProgressBar Value="0" Foreground="SteelBlue" />
                                    <TextBlock Text="0%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="LOADPORT : POD" Grid.Column="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/POD_LOADPORTpng.png" Opacity="0.3" />
                                <local:LoadingControl />
                                <Grid Grid.Row="1">
                                    <TextBlock Text="Working..." Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="20,2">
                                    <ProgressBar Value="70" Foreground="SteelBlue" />
                                    <TextBlock Text="70%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="LOADPORT : RETICLE" Grid.Column="3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Image Source="/Root_AOP01_Packing;component/Resource/RETICLE_LOADPORT.png" />
                                <Grid Grid.Row="1">
                                    <TextBlock Text="Ready" Style="{StaticResource BasicTb}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="20,2">
                                    <ProgressBar Value="0" Foreground="SteelBlue" />
                                    <TextBlock Text="0%" HorizontalAlignment="Center" Margin="0" FontWeight="Bold" Style="{StaticResource BasicTb}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Visibility="Visible">
                    <GroupBox Header="Process" Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="5">
                                <GroupBox Grid.Row="3" Header="Job List">
                                    <StackPanel Background="Transparent" Margin="0,5">
                                        <Label Content="Job 1" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 2" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 3" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 4" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 5" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 6" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 7" Background="SteelBlue" Height="40" VerticalContentAlignment="Center" />

                                        <Label Content="Job 8" Background="LightSteelBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 9" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 10" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 11" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 12" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 13" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 14" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 15" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 16" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 17" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 18" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 19" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 20" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                        <Label Content="Job 21" Background="AliceBlue" Height="40" VerticalContentAlignment="Center" />
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                            <ScrollViewer Grid.Column="1" Margin="5">
                                <StackPanel>
                                    <GroupBox Header="LOADPORT : RETICLE" Height="200" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="/Root_AOP01_Packing;component/Resource/RETICLE_LOADPORT.png" />
                                            <Grid Grid.Column="1" Margin="40,50">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Done" VerticalAlignment="Bottom" FontSize="20" FontFamily="Arial" />
                                                <ProgressBar Grid.Row="1" Value="100" Foreground="SteelBlue" Margin="0,5" />
                                                <TextBlock Text="100%" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="RTR : RETICLE" Height="200" Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="/Root_AOP01_Packing;component/Resource/PTR.png" />
                                            <Grid Grid.Column="1" Margin="40,50">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Done" VerticalAlignment="Bottom" FontSize="20" FontFamily="Arial" />
                                                <ProgressBar Grid.Row="1" Value="100" Foreground="SteelBlue" Margin="0,5" />
                                                <TextBlock Text="100%" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="TAPING MODULE" Height="200" Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="/Root_AOP01_Packing;component/Resource/TAPING_MODULE.png" Opacity="0.3" />
                                            <local:LoadingControl />
                                            <Grid Grid.Column="1" Margin="40,50">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Working..." VerticalAlignment="Bottom" FontSize="20" FontFamily="Arial" />
                                                <ProgressBar Grid.Row="1" Value="55" Foreground="SteelBlue" Margin="0,5" />
                                                <TextBlock Text="55%" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="RTR : POD / CASE" Height="200" Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="/Root_AOP01_Packing;component/Resource/RTR.png" />
                                            <Grid Grid.Column="1" Margin="40,50">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Ready" VerticalAlignment="Bottom" FontSize="20" FontFamily="Arial" />
                                                <ProgressBar Grid.Row="1" Value="0" Foreground="SteelBlue" Margin="0,5" />
                                                <TextBlock Text="0%" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="PACKING LOADER" Height="200" Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="/Root_AOP01_Packing;component/Resource/PACKING_LOADER.png" />
                                            <Grid Grid.Column="1" Margin="40,50">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Ready" VerticalAlignment="Bottom" FontSize="20" FontFamily="Arial" />
                                                <ProgressBar Grid.Row="1" Value="0" Foreground="SteelBlue" Margin="0,5" />
                                                <TextBlock Text="0%" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
