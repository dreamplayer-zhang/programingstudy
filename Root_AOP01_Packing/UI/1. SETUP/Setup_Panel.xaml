<UserControl x:Class="Root_AOP01_Packing.Setup_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AOP01_Packing"
             mc:Ignorable="d" 
             d:DesignHeight="866" d:DesignWidth="1912" Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Menu-->
        <!--Toolbar-->
        <Border Grid.Row="0"
                Background="{StaticResource ControlBackGround}"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="88*"/>
                </Grid.ColumnDefinitions>
                <!--Icon Btns-->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Button FontWeight="Bold" FontSize="13" 
                                    BorderThickness="0,0,0,0"
                                    ToolTip="Back"
                                    Command="{Binding CurrentPanel.DataContext.btnBack}"
                                    Background="{StaticResource ControlBackGround}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Root_AOP01_Packing;component/Control/Icon/Resource/arrow_pointing_left_127px.png" Margin="5"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button FontWeight="Bold" FontSize="13" 
                                    BorderThickness="0,0,0,0"
                                    ToolTip="Setup Home"
                                    Command="{Binding btnNaviSetupHome}"
                                    Background="{StaticResource ControlBackGround}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Root_AOP01_Packing;component/Control/Icon/Resource/home_127px.png" Margin="5"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Button FontWeight="Bold" FontSize="13" 
                                    BorderThickness="0,0,0,0"
                                    ToolTip="Load Recipe"
                                    Background="{StaticResource ControlBackGround}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Root_AOP01_Packing;component/Control/Icon/Resource/folder_127px.png" Margin="5"/>
                                <!--<TextBlock Text="Load"/>-->
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Button FontWeight="Bold" FontSize="13" 
                                    ToolTip="Save Recipe"
                                    BorderThickness="0"
                                    Background="{StaticResource ControlBackGround}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Root_AOP01_Packing;component/Control/Icon/Resource/save_127px.png" Margin="5"/>
                                    <!--<TextBlock Text="Save"/>-->
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
                <!--End Icon Btns-->

                <!--Navigation Btns-->
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <ItemsControl ItemsSource="{Binding NaviButtons}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
                <!--End Navigation Btns-->
            </Grid>
        </Border>
        <!--Panel-->
        <Border Grid.Row="1">
            <Grid>
                <ContentControl Content="{Binding CurrentPanel}"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
