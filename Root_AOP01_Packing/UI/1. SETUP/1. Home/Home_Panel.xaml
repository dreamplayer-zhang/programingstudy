<UserControl x:Class="Root_AOP01_Packing.Home_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AOP01_Packing"
             mc:Ignorable="d" 
             d:DesignHeight="814" d:DesignWidth="1895" Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="{StaticResource Splitter}" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,10,0,0">
                <ToggleButton Content="Engineer" x:Name="EngineerBtn"
                              Command="{Binding btnEngineer}"
                              Style="{StaticResource SetupPanelToggleBtn}"/>
                <ToggleButton Content="GEM" x:Name="GEMBtn"
                              Command="{Binding btnGEM}"
                              Style="{StaticResource SetupPanelToggleBtn}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" x:Name="SubPanel">

        </Grid>





    </Grid>
</UserControl>
