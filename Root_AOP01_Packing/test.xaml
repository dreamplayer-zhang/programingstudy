<UserControl x:Class="Root_AOP01_Packing.test"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AOP01_Packing"
             mc:Ignorable="d" 
             d:DesignHeight="836" d:DesignWidth="1912" Background="Beige">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <StackPanel>
            <Grid Height="788">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      x:Name="col1">
                    <GroupBox Grid.Row="0" Header="Image View"
                              Background="{StaticResource GroupBoxBackground}">
                        <Grid Background="Black">

                        </Grid>
                    </GroupBox>
                </Grid>
                <Grid Grid.Column="1" x:Name="col2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Map Info"
                              Background="{StaticResource GroupBoxBackground}">
                        <Grid Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Wafer Size" Style="{StaticResource BasicTb}" Grid.Row="0" />
                            <TextBlock Text="Shot Origin" Style="{StaticResource BasicTb}" Grid.Row="1"/>
                            <TextBlock Text="X" Style="{StaticResource BasicTb}" Grid.Row="1" Grid.Column="1"/>
                            <TextBlock Text="Y" Style="{StaticResource BasicTb}" Grid.Row="1" Grid.Column="3"/>
                            <TextBlock Text="Shot Size" Style="{StaticResource BasicTb}" Grid.Row="2"/>
                            <TextBlock Text="X" Style="{StaticResource BasicTb}" Grid.Row="2" Grid.Column="1"/>
                            <TextBlock Text="Y" Style="{StaticResource BasicTb}" Grid.Row="2" Grid.Column="3"/>
                            <TextBlock Text="Shot Matrix" Style="{StaticResource BasicTb}" Grid.Row="3"/>
                            <TextBlock Text="X" Style="{StaticResource BasicTb}" Grid.Row="3" Grid.Column="1"/>
                            <TextBlock Text="Y" Style="{StaticResource BasicTb}" Grid.Row="3" Grid.Column="3"/>
                            <TextBox Text="300" Style="{StaticResource BasicTbox}" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3"
                                     Margin="10"/>
                            <TextBox Text="15" Style="{StaticResource BasicTbox}" Grid.Row="1" Grid.Column="2"
                                     Margin="10"/>
                            <TextBox Text="15" Style="{StaticResource BasicTbox}" Grid.Row="1" Grid.Column="4"
                                     Margin="10"/>
                            <TextBox Text="30" Style="{StaticResource BasicTbox}" Grid.Row="2" Grid.Column="2"
                                     Margin="10"/>
                            <TextBox Text="30" Style="{StaticResource BasicTbox}" Grid.Row="2" Grid.Column="4"
                                     Margin="10"/>
                            <TextBox Text="4" Style="{StaticResource BasicTbox}" Grid.Row="3" Grid.Column="2"
                                     Margin="10"/>
                            <TextBox Text="4" Style="{StaticResource BasicTbox}" Grid.Row="3" Grid.Column="4"
                                     Margin="10"/>
                        </Grid>
                    </GroupBox>


                </Grid>
            </Grid>
            <Line Stroke="{StaticResource Splitter}"
                  Stretch="Fill"
                  Margin="-1,2,-1,2"
                  HorizontalAlignment="Stretch"
                  X2="1"/>
            <Grid Height="45">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=col1, Path=ActualWidth}"/>
                    <ColumnDefinition Width="{Binding ElementName=col2, Path=ActualWidth}"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,2,0"
                            HorizontalAlignment="Right">
                    <Button Content="Snap"
                            Width="170"
                            Height="35"
                            Margin="0"
                            Style="{StaticResource SetupPanelBtn}"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Margin="0,0,1,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Clear"
                            Width="170"
                            Height="35"
                            Margin="0,0,0,0"
                            Style="{StaticResource SetupPanelBtn}"/>
                    <Button Content="Create Map"
                            Width="170"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource SetupPanelBtn}"/>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
