<UserControl x:Class="RootTools.Log_Group_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid x:Name="dataGrid" IsReadOnly="True" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Time" Binding="{Binding p_sTime}"/>
            <DataGridTextColumn Header="Level" Binding="{Binding p_sLevel}"/>
            <DataGridTextColumn Header="Logger" Binding="{Binding p_sLogger}"/>
            <DataGridTextColumn Header="Message" Binding="{Binding p_sMessage}"/>
            <DataGridTextColumn Header="Stack Trace" Binding="{Binding p_sStackTrace}"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
