<UserControl x:Class="RootTools.Comm.Modbus_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootTools.Comm"
             xmlns:tree="clr-namespace:RootTools.Trees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox Grid.Row="0" x:Name="checkBoxConnect" Content="Connect" Margin="2"
                  IsChecked="{Binding m_client.Connected}" Checked="checkBoxConnect_Checked" Unchecked="checkBoxConnect_Unchecked"/>
        <TabControl Grid.Row="1">
            <TabItem Header="CommLog">
                <local:CommLog_UI x:Name="commLogUI"/>
            </TabItem>
            <TabItem Header="Setting">
                <tree:TreeUI x:Name="treeRootUI"/>
            </TabItem>
            <TabItem Header="Data">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <CheckBox x:Name="checkBoxRead" Content="Timer Read" Margin="3" Click="checkBoxRead_Click"/>
                        <TextBlock Text="  Unit = " VerticalAlignment="Center"/>
                        <TextBox Margin="3" Text="{Binding p_nViewUnit}" Width="40" TextAlignment="Center"/>
                    </StackPanel>
                    <TabControl Grid.Row="1">
                        <TabItem Header="Coil">
                            <local:ModbusData_UI x:Name="modbusCoil"/>
                        </TabItem>
                        <TabItem Header="DiscreateInput">
                            <local:ModbusData_UI x:Name="modbusDiscreateInput"/>
                        </TabItem>
                        <TabItem Header="HoldingRegister">
                            <local:ModbusData_UI x:Name="modbusHoldingRegister"/>
                        </TabItem>
                        <TabItem Header="InputRegister">
                            <local:ModbusData_UI x:Name="modbusInputRegister"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
