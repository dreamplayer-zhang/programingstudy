<UserControl x:Class="RootTools.Module.ModuleBase_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tool="clr-namespace:RootTools"
             xmlns:tree="clr-namespace:RootTools.Trees"
             xmlns:dio="clr-namespace:RootTools.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label x:Name="labelEQState" Content="{Binding p_eState}" Margin="2"/>
                <CheckBox x:Name="checkBoxStop" Content="EQ.Stop" IsChecked="{Binding p_bStop}" Margin="2"/>
                <CheckBox x:Name="checkBoxPause" Content="EQ.Pause" IsChecked="{Binding p_bPause}" Margin="2"/>
                <CheckBox x:Name="checkBoxSimulate" Content="EQ.Simulate" IsChecked="{Binding p_bSimulate}" Margin="2"/>
                <Label Content="{Binding p_eState}" Margin="2,22,2,2"/>
                <Button x:Name="buttonHome" Content="Home" Height="20" IsEnabled="{Binding p_bEnableHome}" Margin="2"  Click="ButtonHome_Click"/>
                <Button x:Name="buttonRun" Content="{Binding p_sRun}" Height="20" Margin="2" Click="ButtonRun_Click"/>
            </StackPanel>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="AliceBlue" ShowsPreview="True" Width="3"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="{Binding p_sInfo}" Margin="2" HorizontalAlignment="Left"/>
                <CheckBox Grid.Row="0" x:Name="checkBoxSetup" Content="ToolBox" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CheckBoxSetup_Click"/>
                <tree:TreeUI Grid.Row="1" x:Name="treeRootUI" Margin="5"/>
                <tree:TreeUI Grid.Row="1" x:Name="treeToolUI" Margin="5" Visibility="Hidden"/>
            </Grid>
        </Grid>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="AliceBlue" ShowsPreview="True" Width="3"/>
        <Grid Grid.Column="2">
            <TabControl x:Name="tabControlTools">
                <TabItem Header="Info" Background="DarkSalmon">
                    <tool:InfoList_UI x:Name="infoListUI"/>
                </TabItem>
                <TabItem Header="DIO" Background="DarkSalmon">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <dio:ListDIO_ShortID_UI Grid.Column="0" x:Name="listDIUI"/>
                        <dio:ListDIO_ShortID_UI Grid.Column="1" x:Name="listDOUI"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
