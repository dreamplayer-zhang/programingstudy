<UserControl x:Class="RootTools.Control.ACS.ACS_Buffer_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootTools.Control.ACS"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="2">
        <Label Content="{Binding p_id}" MinWidth="50" Margin="2"/>
        <Button x:Name="buttonRun" Content="Run" MinWidth="50" Margin="2" Click="buttonRun_Click"/>
        <Button x:Name="buttonStop" Content="Stop" MinWidth="50" Margin="2" Click="buttonStop_Click"/>
        <TextBox x:Name="textBoxComment" Text="{Binding p_sComment}" MinWidth="150" Margin="2"/>
    </StackPanel>
</UserControl>
