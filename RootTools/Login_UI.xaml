<UserControl x:Class="RootTools.Login_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootTools"
             xmlns:tree="clr-namespace:RootTools.Trees"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="290">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0" VerticalAlignment="Center" Background="{Binding p_colorLevel}">
            <Label Content="{Binding p_sUserName}" Margin="5" Width="80" MouseLeftButtonDown="Label_MouseLeftButtonDown" MouseRightButtonDown="Label_MouseRightButtonDown"/>
            <ComboBox x:Name="comboBoxName" Margin="5" Width="80" Text="{Binding p_sComboName}" ItemsSource="{Binding p_asUserName}"/>
            <PasswordBox x:Name="passwordBox" Margin="5" Width="80" PasswordChanged="PasswordBox_PasswordChanged"/>
        </StackPanel>
        <tree:TreeUI Grid.Row="1" x:Name="treeRootUI"/>
    </Grid>
</UserControl>
