<UserControl x:Class="RootTools.LogIn_MainUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{Binding p_colorLevel}" Margin="0">
        <Grid x:Name="gridUser" Margin="0">
            <Label Content="{Binding p_sUserName}" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>
        </Grid>
        <Grid x:Name="gridPassword" Margin="0" Visibility="Hidden">
            <PasswordBox x:Name="passwordBoxPassword" HorizontalContentAlignment="Center" PasswordChanged="passwordBoxPassword_PasswordChanged"/>
        </Grid>
        <Grid x:Name="gridLogin" Margin="0" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0" x:Name="comboBoxName" Text="{Binding p_sComboName}" ItemsSource="{Binding p_asUserName}"/>
            <PasswordBox Grid.Column="1" x:Name="passwordBoxLogin" HorizontalContentAlignment="Center" PasswordChanged="passwordBoxLogin_PasswordChanged"/>
        </Grid>
    </Grid>
</UserControl>
