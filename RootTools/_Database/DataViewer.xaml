<UserControl 
    x:Class="RootTools.DataViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="279.095" Width="350.508">

    <Grid Background="#FFD1F9EE" Margin="0,0,10,19" >
        <Grid HorizontalAlignment="Left" Height="253" VerticalAlignment="Top" Width="324">
            <DataGrid
                      x:Name="DataViewer_DataGrid"
                      DataContext="{Binding  p_Dataset}" 
                      ItemsSource="{Binding DefaultView}" Margin="10,10,0,10">
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>