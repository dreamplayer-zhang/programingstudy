<UserControl x:Class="Root_Vega.Setting_Illumination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tools="clr-namespace:RootTools;assembly=RootTools"
             xmlns:tree="clr-namespace:RootTools.Trees;assembly=RootTools"
             mc:Ignorable="d"
             d:DesignHeight="726"
             d:DesignWidth="1602">
    <Grid DataContext="{Binding p_lightToolSet}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <tree:TreeUI Grid.Row="0"
                         Margin="15"
                         DataContext="{Binding p_treeRoot}"/>
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Visible">
                <StackPanel Margin="15">
                    <ItemsControl ItemsSource="{Binding p_aLightTool}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Grid.Column="0"
                                    Margin="5"
                                    Style="{StaticResource BasicBtn}"
                                    Content="{Binding p_id}"
                                    Command="{Binding ExpandCommand}"
                                    CommandParameter="{Binding }"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Visible">
            <StackPanel Margin="15">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
