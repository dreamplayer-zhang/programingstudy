    <UserControl.Resources>
        <Converter:InverseBooleanConverter x:Key="InverseBooleanConverters" />
        <Dalsa:CameraConnectStateConverter x:Key="CameraConnectStateConverters"/>
        <Dalsa:CameraNotConnectStateConverter x:Key="CameraNotConnectStateConverters"/>
