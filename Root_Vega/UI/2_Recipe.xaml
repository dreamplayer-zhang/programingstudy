<UserControl x:Class="Root_Vega._2_Recipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_Vega"
             xmlns:tree="clr-namespace:RootTools.Trees;assembly=RootTools"
             mc:Ignorable="d"
             d:DesignHeight="756" d:DesignWidth="1876">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="15"  
                    Style="{StaticResource RcpTabControl}">
            <TabItem Header="Information" 
                     Style="{StaticResource RcptabItem}"
                     Margin="0,50,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox Header="Recipe"
					                          Grid.Row="1"
                                              Margin="10,0,10,10"
                                              Foreground="{StaticResource BtnForeGround}"
                                              FontSize="20">
                                    <StackPanel>
                                        <ComboBox Margin="2,20,2,2"
                                                      ItemsSource="{Binding p_recipe.p_asModule}"
                                                      SelectedValue="{Binding p_strSelectedModule}"/>
                                        <ComboBox Margin="2"
                                                      ItemsSource="{Binding p_aSelectedModuleRun}"
                                                      SelectedValue="{Binding p_strSelectedModuleRun}"/>
                                        <Button Style="{StaticResource BasicBtn}"
                                                    Content="Add"
                                                    Margin="2"
                                                    Visibility="{Binding p_vAddButtonVisibility}"
                                                    Command="{Binding CommandRecipeAdd}"/>
                                        <Button Style="{StaticResource BasicBtn}"
                                                    Content="Clear"
                                                    Margin="2"
                                                    Command="{Binding CommandRecipeClear}"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                            <Border Grid.Column="1">
                                <tree:TreeUI DataContext="{Binding p_moduleRunList.p_treeRoot}"
                                             Background="White"/>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="3">
                        <WrapPanel Orientation="Horizontal">
                            <Grid Width="200"
                              Height="300"
                              Margin="50">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3"
                                    Background="Gray">
                                    <TextBlock Text="Item"
                                           Style="{StaticResource BasicTb}"
                                           FontSize="20"/>
                                </Border>
                                <Border Grid.Row="1"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3,0,3,3">
                                    <StackPanel>
                                        <Grid Margin="15,15,15,0">
                                            <TextBlock Text="EBR"
                                                   Style="{StaticResource BasicTb}"
                                                   FontSize="15"
                                                   HorizontalAlignment="Left"/>
                                            <CheckBox HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        </Grid>
                                        <Grid Margin="15,15,15,0">
                                            <TextBlock Text="Surface"
                                                   Style="{StaticResource BasicTb}"
                                                   FontSize="15"
                                                   HorizontalAlignment="Left"/>
                                            <CheckBox HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        </Grid>

                                        <Grid Margin="15,15,15,0">
                                            <TextBlock Text="Bump"
                                                   Style="{StaticResource BasicTb}"
                                                   FontSize="15"
                                                   HorizontalAlignment="Left"/>
                                            <CheckBox HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        </Grid>
                                        <Grid Margin="15,15,15,0">
                                            <TextBlock Text="Kerf"
                                                   Style="{StaticResource BasicTb}"
                                                   FontSize="15"
                                                   HorizontalAlignment="Left"/>
                                            <CheckBox HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        </Grid>

                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Grid Width="200"
                              Height="300"
                              Margin="0,50,50,50">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3"
                                    Background="Gray">
                                    <TextBlock Text="Wafer Type"
                                           Style="{StaticResource BasicTb}"
                                           FontSize="20"/>
                                </Border>
                                <Border Grid.Row="1"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3,0,3,3">
                                    <StackPanel>
                                        <Grid Margin="15,15,15,0">
                                            <TextBlock Text="300mm"
                                                   Style="{StaticResource BasicTb}"
                                                   FontSize="15"
                                                   HorizontalAlignment="Left"/>
                                            <CheckBox HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        </Grid>
                                        <Grid Margin="15,15,15,0">
                                            <TextBlock Text="400mm"
                                                   Style="{StaticResource BasicTb}"
                                                   FontSize="15"
                                                   HorizontalAlignment="Left"/>
                                            <CheckBox HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Grid Width="200"
                              Height="300"
                              Margin="0,50,50,50">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3"
                                    Background="Gray">
                                    <TextBlock Text="OCR"
                                           Style="{StaticResource BasicTb}"
                                           FontSize="20"/>
                                </Border>
                                <Border Grid.Row="1"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3,0,3,3">
                                    <StackPanel>

                                    </StackPanel>
                                </Border>
                            </Grid>
                        </WrapPanel>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="PatternVision"
                     Style="{StaticResource RcptabItem}">
                <Border BorderBrush="Gray"
                        BorderThickness="3">
                    <local:_2_5_MainVision x:Name="_Strip"/>
                </Border>
            </TabItem>
            <TabItem Header="Side"
                     Style="{StaticResource RcptabItem}">
                <Border BorderBrush="Gray"
                        BorderThickness="3">
                    <local:_2_6_Side x:Name="_Side"/>
                </Border>
			</TabItem>
			<TabItem Header="Side EdgeBox"
                     Style="{StaticResource RcptabItem}">
				<Border BorderBrush="Gray"
                        BorderThickness="3">
					<local:_2_7_EdgeBox x:Name="_SideEdgeBox"/>
				</Border>
			</TabItem>
			<TabItem Header="Bevel"
                     Style="{StaticResource RcptabItem}">
                <Border BorderBrush="Gray"
                        BorderThickness="3">
                    <local:_2_9_Bevel x:Name="_Bevel"/>
                </Border>
			</TabItem>
			<TabItem Header="Bevel EdgeBox"
                     Style="{StaticResource RcptabItem}">
				<Border BorderBrush="Gray"
                        BorderThickness="3">
					<local:_2_10_BevelEdgeBox x:Name="_BevelEdgeBox"/>
				</Border>
			</TabItem>
			<TabItem Header="D2D_Insp"
                     Style="{StaticResource RcptabItem}">
                <Border BorderBrush="Gray"
                        BorderThickness="3">
                    <local:_2_8_D2D_Insp x:Name="_D2D_Insp"/>
                </Border>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Column="1"
                    Margin="0,45,15,15">
            <!--
            <Button Content="Delete"
                    Style="{StaticResource BasicBtn}"
                    Margin="0,0,0,10"/>
            <Button Content="Modify"
                    Style="{StaticResource BasicBtn}"
                    Margin="0,0,0,10"/>-->
            <Button Content="Create Recipe"
                    Style="{StaticResource BasicBtn}"
					Command="{Binding CommandRcpCreate}"
                    Margin="0,0,0,10"/>
            <Button Content="Load Recipe"
                    Style="{StaticResource BasicBtn}"
					Command="{Binding CommandRcpLoad}"
                    Margin="0,0,0,10"/>
            <Button Content="Save Recipe"
                    Style="{StaticResource BasicBtn}"
					Command="{Binding CommandRcpSave}"
                    Margin="0,0,0,10"/>
            <Button Content="Save As Recipe"
                    Style="{StaticResource BasicBtn}"
					Command="{Binding CommandRcpSaveAs}"
                    Margin="0,0,0,10"/>
            <!--<Button Content="Reload"
                    Style="{StaticResource BasicBtn}"
                    Margin="0,0,0,10"/>
            <Button Content="Image Load"
                    Style="{StaticResource BasicBtn}"
                    Margin="0,0,0,10"/>-->
        </StackPanel>
    </Grid>
</UserControl>
