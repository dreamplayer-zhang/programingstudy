<UserControl x:Class="Root_Vega._6_Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tools ="clr-namespace:RootTools;assembly=RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="756" d:DesignWidth="1876"
             Background="#FF2D2D30">
    <Grid>
        <Border Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55*"/>
                        <ColumnDefinition Width="45*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="35*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="15,15,7.5,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    Background="{StaticResource TitleBackGround}"
                                    BorderThickness="3">
                                <TextBlock Text="LOAD PORT 1"
                                           Margin="5,0,0,0"
                                           TextAlignment="Left"
                                           Style="{StaticResource BasicTb}"
                                           FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1"
                                        BorderBrush="Gray"
                                        BorderThickness="3,0,3,3">
                                <StackPanel Margin="10">
                                    <Label Content="Wait Start"
                                           Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource Green}"
                                           Height="40"/>
                                    
                                    <Label Content="RFID Read"
                                           Style="{StaticResource BasicLabel}"
                                               Background="{StaticResource Green}"
                                               Height="40"/>
                                    <Label Content="Docking"
                                           Style="{StaticResource BasicLabel}"
                                               Background="{StaticResource Green}"
                                               Height="40"/>
                                    <Label Content="Open"
                                           Style="{StaticResource BasicLabel}"
                                               Background="{StaticResource Green}"
                                               Height="40"/>
                                    <Label Content="Mapping"
                                           Style="{StaticResource BasicLabel}"
                                               Background="{StaticResource Green}"
                                               Height="40"/>
                                    <Label Content="Close"
                                           Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                           Height="40"/>
                                    <Label Content="Unload Request"
                                           Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="1" Margin="7.5,15,15,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="3"
                                        Background="{StaticResource TitleBackGround}">
                                <TextBlock Text="LOAD PORT 2"
                                           TextAlignment="Left"
                                           Margin="5,0,0,0"
                                           Style="{StaticResource BasicTb}"
                                               FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="3,0,3,3">
                                <StackPanel Margin="10">
                                    <Label Content="Wait Start"
                                           Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource Yellow}"
                                           Height="40"/>
                                    <Label Content="RFID Read"
                                           Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                    <Label Content="Docking"
                                               Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                    <Label Content="Open"
                                               Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                    <Label Content="Mapping"
                                               Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                    <Label Content="Close"
                                               Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                    <Label Content="Unload Request"
                                               Style="{StaticResource BasicLabel}"
                                           Background="{StaticResource DarkGray}"
                                               Height="40"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="1"
                              Margin="15,0,15,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="3"
                                Background="{StaticResource TitleBackGround}">
                            <TextBlock Text="GEM" 
                                       Style="{StaticResource BasicTb}"
                                       TextAlignment="Left"
                                       Margin="5,0,0,0"
                                       FontSize="14"/>
                        </Border>
                        <Border Grid.Row="1"
                                        BorderBrush="Gray"
                                        BorderThickness="3,0,3,3">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Width="80" 
                                       Style="{StaticResource BasicLabel}"
                                       Background="{StaticResource Green}">
                                    <Label.Content>
                                        <TextBlock>
                                            CSTID <LineBreak/> Verification
                                        </TextBlock>
                                    </Label.Content>
                                </Label>
                                <Label Width="80"
                                       Style="{StaticResource BasicLabel}"
                                       Background="{StaticResource Green}">
                                    <Label.Content>
                                        <TextBlock>
                                            Slot Map <LineBreak/> Verification
                                        </TextBlock>
                                    </Label.Content>
                                </Label>
                                <Label Width="80"
                                       Style="{StaticResource BasicLabel}"
                                       Background="{StaticResource Red}">
                                    <Label.Content>
                                        <TextBlock>
                                            Wait PRJob <LineBreak/> Job Create
                                        </TextBlock>
                                    </Label.Content>
                                </Label>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="1" Grid.RowSpan="2"
                              Margin="0,15,15,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="3"
                                Background="{StaticResource TitleBackGround}">
                            <TextBlock Text="SEQUENCE" 
                                       Style="{StaticResource BasicTb}"
                                       TextAlignment="Left"
                                       Margin="5,0,0,0"
                                       FontSize="14"/>
                        </Border>
                        <Border Grid.Row="1"
                                        BorderBrush="Gray"
                                        BorderThickness="3,0,3,3">
                            <TabControl Style="{StaticResource LogTabControl}">

                                <TabItem Header="Wafer1" Grid.Column="0"
                                         Style="{StaticResource LogTabItem}">
                                    <ScrollViewer>
                                        <StackPanel Margin="0,10,0,0">
                                            <Label Content="WTR - Get LoadPort"
                                                   Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource Green}"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Aligner"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource Green}"
                                                       Height="40"/>
                                            <Label Content="Aligner - Align"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource Green}"
                                                       Height="40"/>
                                            <Label Content="Aligner - EBR"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource Green}"
                                                       Height="40"/>
                                            <Label Content="Aligner - OCR"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource Green}"
                                                       Height="40"/>
                                            <Label Content="Aligner - Rotate"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource Yellow}"
                                                       Height="40"/>
                                            <Label Content="WTR - Get Aligner"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Stage"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="Stage - Align"
                                                           Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="Stage - Scan"
                                                       Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="Stage - 2D Inspection"
                                                           Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="WTR - Get Stage"
                                                           Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="WTR - Put LoadPort"
                                                           Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="WTR - Get LoadPort"
                                                          Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Aligner"
                                                           Style="{StaticResource BasicLabel}"
                                                   Background="{StaticResource DarkGray}"
                                                       Height="40"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem Header="Wafer2" Grid.Column="1"
                                         Style="{StaticResource LogTabItem}">
                                    <ScrollViewer>
                                        <ListBox DataContext="{Binding p_moduleRunList}"/>
                                        <!--<StackPanel Margin="0,10,0,0">
                                            <Label Content="WTR - Get LoadPort"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Aligner"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - Align"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - EBR"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - OCR"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - Rotate"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Get Aligner"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Stage"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Stage - Align"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Stage - Scan"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Stage - 2D Inspection"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Get Stage"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put LoadPort"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Get LoadPort"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Aligner"
                                                       Background="SeaGreen"
                                                       Height="40"/>
                                        </StackPanel>-->
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem Header="Wafer3" Grid.Column="2"
                                         Style="{StaticResource LogTabItem}">
                                    <ScrollViewer>
                                        <StackPanel Margin="0,10,0,0">
                                            <Label Content="WTR - Get LoadPort"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Aligner"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - Align"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - EBR"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - OCR"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Aligner - Rotate"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Get Aligner"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Stage"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Stage - Align"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Stage - Scan"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="Stage - 2D Inspection"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Get Stage"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put LoadPort"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Get LoadPort"
                                                       Background="DimGray"
                                                       Height="40"/>
                                            <Label Content="WTR - Put Aligner"
                                                       Background="SeaGreen"
                                                       Height="40"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </Border>
                    </Grid>
                </Grid>
                <Border BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="3"
                        Grid.Column="1"
                        Margin="15,15,0,15">
                    <tools:LogView_UI x:Name="logView" Margin="1"/>
                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>
