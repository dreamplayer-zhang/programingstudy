<UserControl x:Class="Root_ASIS.Module.Trays_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_ASIS.Module"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="buttonClear" Content=" Clear Tray Count " Margin="3,3,30,3" Click="buttonClear_Click"/>
            <Button x:Name="buttonOpen" Content=" Tray Open " Margin="3"/>
            <Button x:Name="buttonFull" Content=" Tray Full " Margin="3"/>
        </StackPanel>
        <Grid Grid.Row="1" x:Name="gridTray"/>
    </Grid>
</UserControl>
