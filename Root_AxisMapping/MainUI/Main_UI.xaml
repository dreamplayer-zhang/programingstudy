<UserControl x:Class="Root_AxisMapping.MainUI.Main_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AxisMapping.MainUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header=" Align ">
                <local:Align_UI x:Name="alignUI"/>
            </TabItem>
            <TabItem Header=" Mapping ">
                <local:Mapping_UI x:Name="mappingUI"/>
            </TabItem>
            <TabItem Header=" Result ">
                <local:Result_UI x:Name="resultUI"/>
            </TabItem>
            <TabItem Header=" Merge ">
                <local:Merge_UI x:Name="mergeUI"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
