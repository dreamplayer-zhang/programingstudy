<UserControl x:Class="Root_CAMELLIA.StageViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_CAMELLIA"
             mc:Ignorable="d" 
             Height="auto"
             Width="auto">
    <Viewbox>
        <Canvas ClipToBounds="True"  Width="310" Height="310" Background="#01FFfFFF" Focusable="True">
            <Ellipse Width="310" Height="310" Fill="#FFDCDCDC" Stroke="#FFDCDCDC"/>
            <Ellipse Width="260" Height="260" Canvas.Left="25" Canvas.Top="25">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF828282" Offset="0.3"></GradientStop>
                        <GradientStop Color="#FF6E6E6E" Offset="0.6"></GradientStop>
                        <GradientStop Color="#FF5A5A5A" Offset="1"></GradientStop>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>
    </Viewbox>
</UserControl>
