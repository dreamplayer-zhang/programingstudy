                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock  Text="Y (mm)" Margin="3" TextAlignment="Center" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Column="1" Margin="3" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="{Binding p_SettingPointY, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                    </Grid>
                                                </Grid>
                                                <Grid Background="Gainsboro" Grid.Row="2" Margin="2">
                                                    <Button Margin="3" Content="Set" Command="{Binding CmdSetCandidatePoint}" Style="{StaticResource customButton}"/>
                                                </Grid>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Line" Style="{StaticResource customTabitem}">
                                            
                                        </TabItem>
                                        <TabItem Header="Circle" Style="{StaticResource customTabitem}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid Background="Gainsboro" Margin="2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock  Text="R Range (mm)" Margin="3" TextAlignment="Center" VerticalAlignment="Center"/>
                                                        <Grid Grid.Column="1">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="0.1*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBox Grid.Column="0" Margin="3" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="{Binding p_SettingRRangeMin, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                            <TextBlock Grid.Column="1" VerticalAlignment="Center">~</TextBlock>
                                                            <TextBox Grid.Column="2" Margin="3" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="{Binding p_SettingRRangeMax, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>
                                                <Grid Background="Gainsboro" Grid.Row="1" Margin="2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock  Text="R Step (mm)" Margin="3" TextAlignment="Center" VerticalAlignment="Center"/>
