                                                        <TextBlock  Text="X (mm)" Margin="3" TextAlignment="Center" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Column="1" Margin="3" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="{Binding p_SettingPointX, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                    </Grid>
                                                </Grid>
                                                <Grid Background="Gainsboro" Grid.Row="1" Margin="2">
