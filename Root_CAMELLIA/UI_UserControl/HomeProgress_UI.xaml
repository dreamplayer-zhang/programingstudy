        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Text="WTR Home Progress"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="20,0,0,0"/>
            <Grid Grid.Row="1">
                <!--<Grid.ColumnDefinitions>
