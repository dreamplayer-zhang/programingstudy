<UserControl x:Class="Root_Pine2.Module.Boats_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_Pine2.Module"
             xmlns:tree="clr-namespace:RootTools.Trees;assembly=RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="3">
        <GroupBox.Header>
            <TextBlock Text="{Binding p_id}" Foreground="Black" FontWeight="Bold" />
        </GroupBox.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="3" Background="AntiqueWhite" PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">
                <TextBlock x:Name="textBlockVision" Text="Vision" HorizontalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="3" Background="Beige">
                    <TextBlock x:Name="textBlockB" HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Column="1" Margin="3" Background="Beige">
                    <TextBlock x:Name="textBlockA" HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="3" Background="AliceBlue">
                    <TextBlock x:Name="textBlockStepB" HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Column="1" Margin="3" Background="AliceBlue">
                    <TextBlock x:Name="textBlockStepA" HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
            <tree:TreeUI Grid.Row="3" x:Name="treeRootUI" IsEnabled="False"/>
            <tree:TreeUI Grid.Row="4" x:Name="treeVisionUI" IsEnabled="False"/>
        </Grid>
    </GroupBox>
</UserControl>
