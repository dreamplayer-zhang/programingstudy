<UserControl x:Class="Root_Pine2.Module.Loader_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_Pine2.Module"
             xmlns:tree="clr-namespace:RootTools.Trees;assembly=RootTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="3">
        <GroupBox.Header>
            <TextBlock Text="{Binding p_id}" Foreground="Black" FontWeight="Bold" />
        </GroupBox.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="Beige" Margin="3">
                <TextBlock x:Name="textBlockStrip" Text="{Binding p_id}" HorizontalAlignment="Center"/>
            </Grid>
            <tree:TreeUI Grid.Row="1" x:Name="treeRootUI" IsEnabled="False"/>
        </Grid>
    </GroupBox>
</UserControl>
