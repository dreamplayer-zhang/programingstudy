<UserControl x:Class="Root_AOP01.RecipeSummary_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_AOP01"
             mc:Ignorable="d" 
             d:DesignHeight="866" d:DesignWidth="1683" Background="{StaticResource PanelBackGround}">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <StackPanel Margin="20">
                <!--Title-->
                <Grid>
                    <TextBlock Text="2020-10-27 10:34:55"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontSize="20"
                           FontWeight="Black"/>
                    <TextBlock Text="Summary" 
                           HorizontalAlignment="Left"
                           FontSize="30"
                           Margin="0,10,10,10"
                           FontWeight="Black"/>
                </Grid>
                <!--45D-->
                <TextBlock Text="45D"
                       Style="{StaticResource BasicTb}"
                       HorizontalAlignment="Right"
                       FontSize="25"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>
                <Rectangle Height="2" Margin="0,0,0,10" Fill="{StaticResource Splitter}"/>
                <Grid Height="200"/>
                <!--Backside-->
                <TextBlock Text="Backside"
                       Style="{StaticResource BasicTb}"
                       HorizontalAlignment="Right"
                       FontSize="25"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>
                <Rectangle Height="2" Margin="0,0,0,10" Fill="{StaticResource Splitter}"/>
                <Grid Height="200"/>
                <!--Edge-->
                <TextBlock Text="Edge"
                       Style="{StaticResource BasicTb}"
                       HorizontalAlignment="Right"
                       FontSize="25"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>
                <Rectangle Height="2" Margin="0,0,0,10" Fill="{StaticResource Splitter}"/>
                <Grid Height="200"/>
                <!--LADS-->
                <TextBlock Text="LADS"
                       Style="{StaticResource BasicTb}"
                       HorizontalAlignment="Right"
                       FontSize="25"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>
                <Rectangle Height="2" Margin="0,0,0,10" Fill="{StaticResource Splitter}"/>
                <Grid Height="200"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
