<UserControl x:Class="Root_VEGA_P.Engineer.Recipe_Module_UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P.Engineer"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="120">
    <StackPanel Orientation="Vertical" Width="120">
        <GroupBox BorderBrush="Black" BorderThickness="1">
            <GroupBox.Header>
                <TextBlock x:Name="textBlockHeader" Foreground="Black" FontWeight="Bold"/>
            </GroupBox.Header>
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="comboBox" Margin="3"/>
                <Button x:Name="buttonRun" Content="Run" Margin="3" Click="buttonRun_Click"/>
                <StackPanel x:Name="stackPanelInfoPod" Orientation="Vertical"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
