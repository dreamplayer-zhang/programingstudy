<UserControl x:Class="Root_VEGA_P_Vision.SurfaceParam_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="10" DataContext="{Binding Param}">
        <TextBlock Text="Enable"/>
        <CheckBox IsChecked="{Binding IsEnable}"/>
        <TextBlock Text="Defect Code"/>
        <TextBox Text="{Binding DefectCode}"/>
        <TextBlock Text="Defect Name"/>
        <TextBox Text="{Binding DefectName}"/>
        <TextBlock Text="Pit Level"/>
        <TextBox Text="{Binding PitLevel}"/>
        <TextBlock Text="Max Level"/>
        <TextBox Text="{Binding LevelMax}"/>
        <TextBlock Text="Min Level"/>
        <TextBox Text="{Binding LevelMin}"/>
        <TextBlock Text="Pit Size"/>
        <TextBox Text="{Binding PitSize}"/>
        <TextBlock Text="Max Size"/>
        <TextBox Text="{Binding SizeMax}"/>
        <TextBlock Text="Min Size"/>
        <TextBox Text="{Binding SizeMin}"/>
        <TextBlock Text="Filter"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource dataFromEnum}}"/>

    </UniformGrid>
</UserControl>
