<UserControl x:Class="Root_VEGA_P_Vision.ConditionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400" Background="{StaticResource MainBackGroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <UniformGrid Rows="4" Grid.Row="0">
            <TextBlock Text="Condition " HorizontalAlignment="Right"/>
            <TextBlock Text="{Binding ConditionCnt}"/>
            <TextBlock Text="Enable"/>
            <CheckBox IsChecked="{Binding IsEnable}"/>
            <TextBlock Text="DefectCode"/>
            <TextBox Text="{Binding DefectCode}"/>
            <TextBlock Text="DefectName"/>
            <TextBox Text="{Binding DefectName}"/>
        </UniformGrid>
        <Button Grid.Row="1" Content="Image &amp; ROI"  Command="{Binding btnImagenROI}">
            <Button.Template >
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="15" HorizontalAlignment="Stretch" Padding="5" VerticalAlignment="Stretch" Background="{StaticResource ButtonBackGroundColor}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" ContentTemplate="{TemplateBinding ContentTemplate}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>

</UserControl>
