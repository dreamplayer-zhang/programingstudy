<UserControl x:Class="Root_VEGA_P_Vision.InspectionOneItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:i="using:Microsoft.Xaml.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource MainBackGroundColor}">
    <StackPanel>
        <Button BorderBrush="{StaticResource MainBackGroundColor}" Content="{Binding ItemName}" Style="{StaticResource ListViewHeader}" Command="{Binding btnHeader}" Margin="20,0,0,0"/>
        <StackPanel Visibility="{Binding IsOpenItem,Converter={StaticResource BooleanToVisiblity}}">
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>-->
            <ListBox BorderBrush="{StaticResource MainBackGroundColor}" Background="{StaticResource MainBackGroundColor}" Visibility="{Binding ListItem.Count,Converter={StaticResource CountToVisibility}}" HorizontalContentAlignment="Stretch" Grid.Row="0" ItemsSource="{Binding ListItem}" SelectedIndex="{Binding ItemIdx}">
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Height="19" Source="../../../Resources/add-plus-button.png" />
                <TextBlock Text="Add" Margin="10,0,0,0" FontSize="20"/>
            </StackPanel>
            <!--<Button BorderBrush="{StaticResource MainBackGroundColor}" Grid.Row="1"  Command="{Binding btnAdd}" Background="{StaticResource MainBackGroundColor}" Padding="5">
                <Image Height="19" Source="../../../Resources/add-plus-button.png" />
            </Button>-->
        </StackPanel>
    </StackPanel>
</UserControl>
