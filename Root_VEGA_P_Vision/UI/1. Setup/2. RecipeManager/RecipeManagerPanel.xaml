<UserControl x:Class="Root_VEGA_P_Vision.RecipeManagerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local ="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d"
             d:DesignHeight="818"
             d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="88*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="{StaticResource Splitter}"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="0,10,0,0">
                <RadioButton x:Name="radiobtnOrigin" Content="Origin" Command="{Binding btnOrigin}" Style="{StaticResource SetupPannelRadioBtn}"/>
                <RadioButton Content="Position" Command="{Binding btnPosition}" Style="{StaticResource SetupPannelRadioBtn}"/>
                <RadioButton Content="Mask" Command="{Binding btnMask}" Style="{StaticResource SetupPannelRadioBtn}"/>
                <!--<Button Content="Stain" Command="{Binding btnStain}" Style="{StaticResource SetupPanelBtn2}"/>
                <Button Content="2D TDI" Command="{Binding btn6um}" Style="{StaticResource SetupPanelBtn2}"/>
                <Button Content="Z Stack" Command="{Binding btn1um}" Style="{StaticResource SetupPanelBtn2}"/>
                <Button Content="Side" Command="{Binding btnSide}" Style="{StaticResource SetupPanelBtn2}"/>-->
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding p_SubPanel}"/>
        </Grid>
    </Grid>
</UserControl>
