<UserControl x:Class="Root_VEGA_P_Vision.Recipe1um_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d" 
             xmlns:Tools="clr-namespace:RootTools;assembly=RootTools"
             d:DesignHeight="836" d:DesignWidth="1912" 
             Background="{StaticResource MainBackGroundColor}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0" Style="{StaticResource ImageViewerTabControlStyle}" SelectedIndex="{Binding SelectedTab}">
                <TabItem Header="EIP Cover Bottom"
                                 Width="140" Style="{StaticResource ImageViewerTabItemStyle}">
                    <Tools:RootViewer DataContext="{Binding EIPCoverBottom}"/>
                </TabItem>
                <TabItem Header="EIP Base Top"
                                 Width="120" Style="{StaticResource ImageViewerTabItemStyle}">
                    <Tools:RootViewer DataContext="{Binding EIPBasePlateTop}"/>
                </TabItem>
            </TabControl>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Sample Image">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="EIP Cover Bottom">
                        <Tools:RootViewer DataContext="{Binding EIPCoverBottom_Teach}"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="EIP BasePlate Top">
                        <Tools:RootViewer DataContext="{Binding EIPBasePlateTop_Teach}"/>
                    </GroupBox>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="Step Image">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="EIP Cover Bottom">
                        <local:screwUI DataContext="{Binding EIPCoverBottom_Step}"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="EIP BasePlate Top">
                        <local:screwUI DataContext="{Binding EIPBasePlate_Step}"/>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>

</UserControl>
