                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="75*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0"
                          Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8.8*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Pod ID"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="＊"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />
                            <TextBox Grid.Column="1"
                                     Text="3EN0525820500017"
                                     VerticalAlignment="Center"
                                     Margin="0,0,0,0" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Weight"
                                       Grid.Row="1"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="＊"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />
                            <TextBox Grid.Column="1"
                                     Grid.Row="1"
                                     Text="0"
                                     VerticalAlignment="Center"
                                     Margin="0,0,0,0" />
                            <TextBlock Text="(Kg)"
                                       Foreground="DimGray"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,5,0" />
                        </Grid>
                        <Button Content="Get All Image"
                                Height="40"
                                Margin="0,5"
                                Grid.Row="2" />
                        <Button Content="Create"
                                Height="40"
                                Margin="0,5"
                                Grid.Row="3" />
                        <Button Content="Delete"
                                Height="40"
                                Margin="0,5"
                                Grid.Row="4" />
                        <ListView Grid.Row="6"
                                  Grid.ColumnSpan="2"
                                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                                  ScrollViewer.HorizontalScrollBarVisibility="Visible">
                            <ListView.View>
                                <GridView TextElement.FontSize="9">
                                    <GridViewColumn Width="220"
                                                    DisplayMemberBinding="{Binding a}"
                                                    Header="POD" />
                                    <GridViewColumn Width="160"
                                                    DisplayMemberBinding="{Binding b}"
                                                    Header="Weight(Kg)" />
                                </GridView>
                            </ListView.View>
                            <local:Data a="3EN0525820500017"
                                        b="2.8" />
                            <local:Data a="3EN0625820500017"
                                        b="3.1" />
                        </ListView>
                    </Grid>
                    <TabControl Grid.Column="1">
                        <TabItem Header="EIP Cover Top"
                                 Width="120">
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="Viewer">
                                    <Tools:RootViewer DataContext="{Binding EIPCoverTop_ImageViewerVM}"/>
                                </GroupBox>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30*" />
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="45*" />
                                    </Grid.RowDefinitions>
                                    <GroupBox Header="Tools">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <ToggleButton Content="Pen"
                                                          Margin="5" />
                                            <ToggleButton Content="Eraser"
                                                          Grid.Row="1"
                                                          Margin="5" />
                                            <ToggleButton Content="Rect"
                                                          Grid.Row="2"
                                                          Margin="5" />
                                            <ToggleButton Content="Polygon"
                                                          Grid.Row="3"
                                                          Margin="5" />
                                            <ToggleButton Content="Crop"
                                                          Grid.Row="4"
                                                          Margin="5" />
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="Inspection Parameter"
                                              Grid.Row="1"
                                              VerticalAlignment="Center">
                                        <DataGrid RowHeaderWidth="0"
                                                  GridLinesVisibility="Vertical"
                                                  AlternatingRowBackground="AliceBlue">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Parameter"
                                                                    Width="1.5*"
                                                                    Binding="{Binding a}" />
                                                <DataGridTemplateColumn Header="Value" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding b}"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                            <local:Data a="Absolute" b="True" />
                                            <local:Data a="Pit Level (GV)" b="0"/>
                                            <local:Data a="Level Min (GV)"
                                                        b="0" />
                                            <local:Data a="Level Max (GV)"
                                                        b="0" />
                                            <local:Data a="Pit Size (Pxl)"
                                                        b="0" />
                                            <local:Data a="Size Max (Pxl)"
                                                        b="0" />
                                            <local:Data a="Size Min (Pxl)"
                                                        b="0" />

                                        </DataGrid>
                                    </GroupBox>
                                    <Grid Grid.Row="2">
                                        <Button Content="Clear"
                                                VerticalAlignment="Bottom"
                                                Height="35"
                                                Margin="5" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </TabItem>
