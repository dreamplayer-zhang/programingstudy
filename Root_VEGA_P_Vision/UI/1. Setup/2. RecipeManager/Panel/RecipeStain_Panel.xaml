            <StackPanel Margin="0,10,0,0">
                <ToggleButton Content="Snap"
                              IsChecked="false"
                              Style="{StaticResource SetupPanelToggleBtn}" />
                <ToggleButton Content="Inspection"
                              IsChecked="false"
                              Style="{StaticResource SetupPanelToggleBtn}" />
            </StackPanel>
        </Border>
