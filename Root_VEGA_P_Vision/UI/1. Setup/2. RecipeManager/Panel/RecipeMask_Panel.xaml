<UserControl x:Class="Root_VEGA_P_Vision.RecipeMask_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d" 
             xmlns:Tools="clr-namespace:RootTools;assembly=RootTools"
             d:DesignHeight="818"
             d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="88*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border Grid.Column="0" BorderBrush="{StaticResource Splitter}"
                BorderThickness="0,0,1,0">
                <StackPanel Margin="0,10,0,0">
                    <RadioButton x:Name="radiobtnStain" Content="Stain" Command="{Binding btnStain}" Style="{StaticResource SetupPannelRadioBtn}"/>
                    <RadioButton Content="2D TDI" Command="{Binding btn6um}" Style="{StaticResource SetupPannelRadioBtn}"/>
                    <RadioButton Content="Z Stack" Command="{Binding btn1um}" Style="{StaticResource SetupPannelRadioBtn}"/>
                    <RadioButton Content="Side" Command="{Binding btnSide}" Style="{StaticResource SetupPannelRadioBtn}"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button Content="Snap" Style="{StaticResource ImageBaseBtn}" Command="{Binding p_MaskPanel.DataContext.btnSnap}"/>
                        <Button Content="Inspection" Style="{StaticResource ImageBaseBtn}" Command="{Binding p_MaskPanel.DataContext.btnInsp}"/>
                    </StackPanel>
                    <ContentControl Grid.Row="1" Content="{Binding p_MaskPanel}"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Header="Tools" Grid.Row="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Margin="3,5">
                                <GroupBox.Header>
                                    <TextBlock Text="Thickness(Pixel)"
                                                           FontSize="11" />
                                </GroupBox.Header>
                                <ComboBox HorizontalContentAlignment="Left"
                                                      SelectedIndex="{Binding p_nThickness}">
                                    <ComboBoxItem Content="0" Visibility="Collapsed"/>
                                    <ComboBoxItem Content="1" />
                                    <ComboBoxItem Content="2" />
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="4" />
                                    <ComboBoxItem Content="5" />
                                    <ComboBoxItem Content="6" />
                                    <ComboBoxItem Content="7" />
                                    <ComboBoxItem Content="8" />
                                    <ComboBoxItem Content="9" />
                                    <ComboBoxItem Content="10" />
                                    <ComboBoxItem Content="11" />
                                    <ComboBoxItem Content="12" />
                                    <ComboBoxItem Content="13" />
                                    <ComboBoxItem Content="14" />
                                    <ComboBoxItem Content="15" />
                                </ComboBox>
                            </GroupBox>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <RadioButton Content="Pen"
                                                      Margin="5" 
                                                      Style="{StaticResource {x:Type ToggleButton}}"
                                                      IsChecked="{Binding bPenCheck}"/>
                                    <RadioButton Content="Eraser"
                                                      Margin="5"
                                                     Style="{StaticResource {x:Type ToggleButton}}"
                                                      IsChecked="{Binding bEraserCheck}" />
                                    <RadioButton Content="Rect"
                                                      Margin="5"
                                                     Style="{StaticResource {x:Type ToggleButton}}"
                                                      IsChecked="{Binding bRectCheck}" />
                                    <RadioButton Content="Circle"
                                                      Grid.Row="4"
                                                      Margin="5"
                                                     Style="{StaticResource {x:Type ToggleButton}}"
                                                      IsChecked="{Binding bPolygonCheck}" />
                                    <RadioButton Content="Crop"
                                                      Grid.Row="5"
                                                      Margin="5"
                                                     Style="{StaticResource {x:Type ToggleButton}}"
                                                      IsChecked="{Binding bCropCheck}" />
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <GroupBox Margin="3,5"
                                                  Grid.Row="6">
                                        <GroupBox.Header>
                                            <TextBlock Text="Threshold(Gv)"
                                                           FontSize="11" />
                                        </GroupBox.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBox Margin="2.5,0" 
                                                         HorizontalContentAlignment="Center"
                                                         Text="{Binding p_nThreshold}"/>

                                            <ComboBox Grid.Column="1" Margin="2.5,0"
                                                          HorizontalContentAlignment="Center"
                                                          SelectedIndex="{Binding p_nThresholdMode}">
                                                <ComboBoxItem Content="Down" />
                                                <ComboBoxItem Content="Up" />
                                            </ComboBox>
                                        </Grid>
                                    </GroupBox>
                                    <RadioButton Content="Threshold"
                                                      Grid.Row="7"
                                                      Margin="5"
                                                     Style="{StaticResource {x:Type ToggleButton}}"
                                                      IsChecked="{Binding bThresholdCheck}" />
                                </StackPanel>



                            </Grid>

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Inspection Parameter"
                                          Grid.Row="1"
                                          VerticalAlignment="Top">
                        <DataGrid RowHeaderWidth="0"
                                              GridLinesVisibility="Vertical"
                                              AlternatingRowBackground="AliceBlue">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Parameter"
                                                                Width="1.5*"
                                                                Binding="{Binding a}" />
                                <DataGridTemplateColumn Header="Value"
                                                                    Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding b}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <local:Data a="Absolute"
                                                        b="True" />
                            <local:Data a="Pit Level (GV)"
                                                        b="0" />
                            <local:Data a="Level Min (GV)"
                                                        b="0" />
                            <local:Data a="Level Max (GV)"
                                                        b="0" />
                            <local:Data a="Pit Size (Pxl)"
                                                        b="0" />
                            <local:Data a="Size Max (Pxl)"
                                                        b="0" />
                            <local:Data a="Size Min (Pxl)"
                                                        b="0" />

                        </DataGrid>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="Similarity" Visibility="Visible">
                        <!--{Binding pGBsimilar}-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Header="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="X" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="1" Margin="0,10,0,10"/>
                                    <TextBlock Text="Y" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="3" Margin="0,10,0,10"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="X" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="1" Margin="0,10,0,10"/>
                                    <TextBlock Text="Y" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="3" Margin="0,10,0,10"/>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Row="3">
                        <Button Content="Clear"
                                            Command="{Binding p_MaskPanel.DataContext.Clear}"
                                            VerticalAlignment="Bottom"
                                            Height="35"
                                            Margin="5" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>


    </Grid>
</UserControl>
