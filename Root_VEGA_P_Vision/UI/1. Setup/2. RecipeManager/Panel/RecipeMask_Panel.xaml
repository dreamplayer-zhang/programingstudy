<UserControl x:Class="Root_VEGA_P_Vision.RecipeMask_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d" 
             xmlns:Tools="clr-namespace:RootTools;assembly=RootTools"
             d:DesignHeight="818"
             d:DesignWidth="1912"
             Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="88*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border Grid.Column="0" BorderBrush="{StaticResource Splitter}"
                BorderThickness="0,0,1,0">
                <StackPanel Margin="0,10,0,0">
                    <RadioButton x:Name="radiobtnStain" Content="Stain" Command="{Binding btnStain}" Style="{StaticResource SetupPannelRadioBtn}"/>
                    <RadioButton Content="2D TDI" Command="{Binding btn6um}" Style="{StaticResource SetupPannelRadioBtn}"/>
                    <RadioButton Content="Z Stack" Command="{Binding btn1um}" Style="{StaticResource SetupPannelRadioBtn}"/>
                    <RadioButton Content="Side" Command="{Binding btnSide}" Style="{StaticResource SetupPannelRadioBtn}"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button Content="Snap" Style="{StaticResource ImageBaseBtn}" Command="{Binding p_MaskPanel.DataContext.btnSnap}"/>
                        <Button Content="Inspection" Style="{StaticResource ImageBaseBtn}" Command="{Binding p_MaskPanel.DataContext.btnInsp}"/>
                        <Button Content="Illum 1" Style="{StaticResource ImageBaseBtn}" Command="{Binding p_MaskPanel.DataContext.SelectedViewer.btnIllum1}"/>
                        <Button Content="Illum 2" Style="{StaticResource ImageBaseBtn}" Command="{Binding p_MaskPanel.DataContext.SelectedViewer.btnIllum2}"/>
                    </StackPanel>
                    <ContentControl Grid.Row="1" Content="{Binding p_MaskPanel}"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <local:MaskTools_Panel Grid.Row="0" DataContext="{Binding MaskTools}"/>
                    <GroupBox Header="Inspection Parameter"
                                          Grid.Row="1"
                                          VerticalAlignment="Top" >
                        <TreeView>
                            <TreeViewItem Header="Bright" IsExpanded="True">
                                <local:SurfaceParam_Panel HorizontalContentAlignment="Stretch" DataContext="{Binding BrightParam}" Width="251"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Dark">
                                <local:SurfaceParam_Panel HorizontalContentAlignment="Stretch" DataContext="{Binding DarkParam}" Width="251"/>
                            </TreeViewItem>
                        </TreeView>
                        <!--DataContext="{Binding CurBaseParam}"-->
                        <!--<StackPanel>
                            <UniformGrid Rows="7">
                                <TextBlock Text="Absolute"/>
                                <TextBox Text="{Binding Absolute}"/>
                                <TextBlock Text="Pit Level(GV)"/>
                                <TextBox Text="{Binding PitLevel}"/>
                                <TextBlock Text="Level Min(GV)"/>
                                <TextBox Text="{Binding LevelMin}"/>
                                <TextBlock Text="Level Max(GV)"/>
                                <TextBox Text="{Binding LevelMax}"/>
                                <TextBlock Text="Pit Size(Pxl)"/>
                                <TextBox Text="{Binding PitSize}"/>
                                <TextBlock Text="Size Max(Pxl)"/>
                                <TextBox Text="{Binding SizeMax}"/>
                                <TextBlock Text="Size Min(Pxl)"/>
                                <TextBox Text="{Binding SizeMin}"/>
                            </UniformGrid>
                        </StackPanel>-->
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="Similarity" Visibility="Visible">
                        <!--{Binding pGBsimilar}-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Header="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="X" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="1" Margin="0,10,0,10"/>
                                    <TextBlock Text="Y" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="3" Margin="0,10,0,10"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="X" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="1" Margin="0,10,0,10"/>
                                    <TextBlock Text="Y" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <TextBox Grid.Column="3" Margin="0,10,0,10"/>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Row="3">
                        <Button Content="Clear"
                                            Command="{Binding p_MaskPanel.DataContext.Clear}"
                                            VerticalAlignment="Bottom"
                                            Height="35"
                                            Margin="5" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>


    </Grid>
</UserControl>
