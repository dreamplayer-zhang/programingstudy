             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Root_VEGA_P_Vision"
             mc:Ignorable="d" 
                          d:DesignHeight="866" d:DesignWidth="1912" Background="{StaticResource PanelBackGround}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="88*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" BorderBrush="{StaticResource Splitter}"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="0,10,0,0">
                <Button Content="Snap" Style="{StaticResource SetupPanelBtn2}" Command="{Binding p_SubPanel.DataContext.btnSnap}" />
                <Button Content="Inspection" Style="{StaticResource SetupPanelBtn2}" Command="{Binding p_SubPanel.DataContext.btnInsp}"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.4*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <!--<ColumnDefinition Width="0.3*"/>-->
                </Grid.ColumnDefinitions>
                <!--<GroupBox Grid.Column="0" Header="Pod info">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
