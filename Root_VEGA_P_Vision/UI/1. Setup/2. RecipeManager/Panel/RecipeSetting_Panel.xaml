                                     VerticalAlignment="Center"
                                     Margin="0,0,0,0" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Weight"
                                       Grid.Row="1"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="＊"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />
                            <TextBox Grid.Column="1"
                                     Grid.Row="1"
                                     Text="0"
                                     VerticalAlignment="Center"
                                     Margin="0,0,0,0" />
                            <TextBlock Text="(Kg)"
                                       Foreground="DimGray"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,5,0" />
                        </Grid>
                        <Button Content="Get All Image"
                                Height="40"
                                Margin="0,5"
                                Grid.Row="2" />
                        <Button Content="Create"
                                Height="40"
                                Margin="0,5"
                                Grid.Row="3" />
                        <Button Content="Delete"
                                Height="40"
                                Margin="0,5"
                                Grid.Row="4" />
                        <ListView Grid.Row="6"
                                  Grid.ColumnSpan="2"
